---
// Google Analytics 4 (GA4) tracking component
// Replace 'G-XXXXXXXXXX' with your actual GA4 Measurement ID
// Get your ID from: https://analytics.google.com/analytics/web/
const GA_MEASUREMENT_ID = import.meta.env.PUBLIC_GA_MEASUREMENT_ID || "G-XXXXXXXXXX";

// Only load GA4 in production
const isProduction = import.meta.env.PROD;
---

{isProduction && GA_MEASUREMENT_ID !== "G-XXXXXXXXXX" && (
  <>
    <!-- Google tag (gtag.js) -->
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_MEASUREMENT_ID}`}></script>
    <script define:vars={{ GA_MEASUREMENT_ID }}>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', GA_MEASUREMENT_ID, {
        page_path: window.location.pathname,
        send_page_view: true
      });
    </script>
  </>
)}

<!--
  Setup Instructions:
  1. Create a Google Analytics 4 property at https://analytics.google.com/
  2. Get your Measurement ID (format: G-XXXXXXXXXX)
  3. Add to .env file: PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
  4. Or replace 'G-XXXXXXXXXX' above with your actual ID

  Events tracked automatically:
  - Page views
  - Scroll depth
  - Outbound link clicks
  - File downloads

  Custom events can be tracked using:
  gtag('event', 'event_name', { parameters });
-->
