---
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";
import { WhatsAppButton } from "@/components/react/WhatsAppButton";
import SEOHead from "@/components/seo/SEOHead.astro";
import GoogleAnalytics from "@/components/GoogleAnalytics.astro";
import "@/styles/globals.css";

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  ogType?: string;
  keywords?: string[];
  noindex?: boolean;
  nofollow?: boolean;
}

const {
  title = "GreenEVCabs - Sustainable Electric Cab Services | Book Electric Cabs Online",
  description = "Book premium electric cabs in Maharashtra. Eco-friendly, comfortable, and reliable EV cab services for airport transfers, outstation trips, and corporate bookings. Zero emissions, 24/7 service.",
  ogImage = "/og-image.jpg",
  ogType = "website",
  keywords = [],
  noindex = false,
  nofollow = false,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Favicons -->
    <link rel="icon" href="/favicon.ico" sizes="32x32" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="shortcut icon" href="/favicon.ico" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#10b981" />
    <meta name="msapplication-TileColor" content="#10b981" />

    <!-- SEO Meta Tags -->
    <SEOHead
      title={title}
      description={description}
      ogImage={ogImage}
      ogType={ogType}
      keywords={keywords}
      noindex={noindex}
      nofollow={nofollow}
    />

    <!-- Google Analytics 4 -->
    <GoogleAnalytics />

    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://wa.me" />

    <!-- Theme Script -->
    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();

      if (theme === "dark") {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
  </head>
  <body>
    <div class="relative min-h-screen flex flex-col">
      <Header />
      <main class="flex-1">
        <slot />
      </main>
      <Footer />
      <WhatsAppButton client:load />
    </div>
  </body>
</html>
