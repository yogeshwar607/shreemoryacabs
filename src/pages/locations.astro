  <!-- Hero Section -->
  <section class="w-full py-12 md:py-20 bg-gradient-to-b from-primary/10 to-background">
    <div class="container px-4 md:px-6">
      <div class="max-w-4xl mx-auto text-center">
        <Badge variant="secondary" className="mb-4">
