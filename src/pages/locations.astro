                <div class="mb-4">
                  <p class="text-sm font-semibold mb-2">Services:</p>
                  <div class="flex flex-wrap gap-2">
                    {location.features.map((feature) => (
                      <Badge variant="outline" className="text-xs">{feature}</Badge>
