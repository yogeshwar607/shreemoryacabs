    name: "Hinjewadi IT Park",
    slug: "electric-cab-service-hinjewadi",
    areas: ["Phase 1, 2, 3", "Rajiv Gandhi Infotech Park", "TCS, Infosys, Wipro"],
    price: "₹3,700",
    destination: "Mumbai Airport",
    features: ["All IT companies", "Early morning pickups", "Corporate packages"]
