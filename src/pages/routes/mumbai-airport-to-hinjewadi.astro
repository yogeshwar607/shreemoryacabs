---
import MainLayout from '@/layouts/MainLayout.astro';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { Button } from '@/components/ui/button';
import { Plane, MapPin, Clock, IndianRupee, CheckCircle2, Route as RouteIcon, Building2, MessageCircle, Phone } from 'lucide-react';

const SITE_URL = import.meta.env.PUBLIC_SITE_URL || 'https://greenevcabs.com';
const WHATSAPP_NUMBER = import.meta.env.PUBLIC_WHATSAPP_NUMBER || '917498264215';

const title = 'Mumbai Airport to Hinjewadi Cab Service - Electric Cab Booking';
const description = 'Reliable electric cab from Mumbai Airport to Hinjewadi. Terminal 1 & 2 pickup, 24/7 service, fixed rates ₹3,700-4,200. Direct drop at your IT park or residence.';

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    { '@type': 'ListItem', position: 1, name: 'Home', item: SITE_URL },
    { '@type': 'ListItem', position: 2, name: 'Routes', item: `${SITE_URL}/routes` },
    { '@type': 'ListItem', position: 3, name: 'Mumbai Airport to Hinjewadi' },
  ],
};

const serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'TaxiService',
  name: 'Mumbai Airport to Hinjewadi Electric Cab',
  description: description,
  provider: { '@type': 'Organization', name: 'GreenEVCabs' },
  areaServed: { '@type': 'Place', name: 'Mumbai Airport to Hinjewadi' },
  availableChannel: {
    '@type': 'ServiceChannel',
    serviceUrl: `${SITE_URL}/routes/mumbai-airport-to-hinjewadi`,
    servicePhone: `+${WHATSAPP_NUMBER}`,
  },
};

const faqs = [
  { question: 'How much does a cab cost from Mumbai Airport to Hinjewadi?', answer: 'Fixed rates: ₹3,700 for Kia Carens EV (6-seater) and ₹4,200 for BYD eMax 7 (luxury 6-seater). All-inclusive pricing with tolls, no hidden charges.' },
  { question: 'How long does it take from Mumbai Airport to Hinjewadi?', answer: 'Approximately 3.5-4 hours (175 km) via Expressway. Early morning/late night: 3-3.5 hours with clear roads.' },
  { question: 'Do you pick up from both Terminal 1 and Terminal 2?', answer: 'Yes, we pick up from both terminals. Share your terminal number and flight arrival time when booking. Driver will coordinate pickup point via call.' },
  { question: 'Is 24/7 service available for late night arrivals?', answer: 'Yes, we operate 24/7. For late night/early morning arrivals (10 PM - 6 AM), book in advance and share flight details for timely pickup.' },
  { question: 'Can you drop at specific IT parks in Hinjewadi?', answer: 'Yes, we drop at all Hinjewadi locations: Phase 1 (TCS, Wipro), Phase 2 (Infosys, Cognizant), Phase 3, residential societies, and any specific address you provide.' },
  { question: 'What if my flight is delayed?', answer: 'Share your flight number when booking. We track flight status and adjust pickup time automatically. No extra charges for flight delays.' },
];

const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: faqs.map((faq) => ({
    '@type': 'Question',
    name: faq.question,
    acceptedAnswer: { '@type': 'Answer', text: faq.answer },
  })),
};
---

<MainLayout title={title} description={description}>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  </Fragment>

  <div class="container mx-auto px-4 py-12 max-w-4xl">
    <nav class="mb-6 text-sm text-muted-foreground">
      <a href="/" class="hover:text-foreground">Home</a>
      <span class="mx-2">/</span>
      <a href="/routes" class="hover:text-foreground">Routes</a>
      <span class="mx-2">/</span>
      <span class="text-foreground">Mumbai Airport to Hinjewadi</span>
    </nav>

    <header class="mb-8">
      <div class="flex flex-wrap gap-2 mb-4">
        <Badge variant="default">Return Journey</Badge>
        <Badge variant="secondary">Hinjewadi</Badge>
        <Badge variant="outline">24/7 Service</Badge>
      </div>
      <h1 class="text-4xl font-bold mb-4">{title}</h1>
      <p class="text-xl text-muted-foreground">{description}</p>
    </header>

    <div class="grid md:grid-cols-3 gap-4 mb-12">
      <Card>
        <CardContent class="pt-6 text-center">
          <MapPin class="h-8 w-8 mx-auto mb-2 text-emerald-600" />
          <p class="text-2xl font-bold">175 km</p>
          <p class="text-sm text-muted-foreground">Total Distance</p>
        </CardContent>
      </Card>
      <Card>
        <CardContent class="pt-6 text-center">
          <Clock class="h-8 w-8 mx-auto mb-2 text-blue-600" />
          <p class="text-2xl font-bold">3.5-4 hrs</p>
          <p class="text-sm text-muted-foreground">Journey Time</p>
        </CardContent>
      </Card>
      <Card>
        <CardContent class="pt-6 text-center">
          <IndianRupee class="h-8 w-8 mx-auto mb-2 text-purple-600" />
          <p class="text-2xl font-bold">₹3,700</p>
          <p class="text-sm text-muted-foreground">Starting Price</p>
        </CardContent>
      </Card>
    </div>

    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6 flex items-center gap-2">
        <Plane class="h-8 w-8 text-emerald-600" />
        Terminal-Wise Pickup Instructions
      </h2>

      <div class="grid md:grid-cols-2 gap-6">
        <Card>
          <CardHeader>
            <CardTitle>Terminal 1 (Domestic)</CardTitle>
          </CardHeader>
          <CardContent class="space-y-3 text-sm">
            <p><strong>Pickup Point:</strong> Arrivals Exit, Pre-paid Taxi Counter area</p>
            <p><strong>Process:</strong> Driver will call you upon arrival. Meet at designated spot near Arrivals exit.</p>
            <p><strong>Waiting Time:</strong> Driver waits up to 30 minutes free after flight landing</p>
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle>Terminal 2 (Domestic + International)</CardTitle>
          </CardHeader>
          <CardContent class="space-y-3 text-sm">
            <p><strong>Pickup Point:</strong> Gate 8 (Domestic) or International Arrivals Exit</p>
            <p><strong>Process:</strong> Driver calls after you clear customs/baggage claim</p>
            <p><strong>Waiting Time:</strong> Up to 45 minutes free for international arrivals</p>
          </CardContent>
        </Card>
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6 flex items-center gap-2">
        <RouteIcon class="h-8 w-8 text-emerald-600" />
        Route Details
      </h2>

      <Card>
        <CardContent class="pt-6">
          <ol class="space-y-3 text-sm">
            <li class="flex items-start gap-2">
              <span class="font-bold text-emerald-600 min-w-[24px]">1.</span>
              <span>Pickup from Mumbai Airport (Terminal 1 or 2)</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="font-bold text-emerald-600 min-w-[24px]">2.</span>
              <span>Mumbai-Pune Expressway via Panvel (95 km, smooth 6-lane highway)</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="font-bold text-emerald-600 min-w-[24px]">3.</span>
              <span>Exit at Lonavala junction towards Pune</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="font-bold text-emerald-600 min-w-[24px]">4.</span>
              <span>Mumbai-Pune Old Highway towards Hinjewadi (45 km)</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="font-bold text-emerald-600 min-w-[24px]">5.</span>
              <span>Enter Hinjewadi - direct drop at Phase 1/2/3 or your specific address</span>
            </li>
          </ol>
        </CardContent>
      </Card>
    </section>

    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6 flex items-center gap-2">
        <Building2 class="h-8 w-8 text-emerald-600" />
        Drop Locations in Hinjewadi
      </h2>

      <div class="grid md:grid-cols-3 gap-4">
        <Card>
          <CardHeader>
            <CardTitle className="text-lg">Phase 1 IT Parks</CardTitle>
          </CardHeader>
          <CardContent class="text-sm space-y-1">
            <p>• TCS Yantra Park</p>
            <p>• Wipro Limited</p>
            <p>• Tech Mahindra</p>
            <p>• Persistent Systems</p>
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle className="text-lg">Phase 2 IT Parks</CardTitle>
          </CardHeader>
          <CardContent class="text-sm space-y-1">
            <p>• Infosys Campus</p>
            <p>• Cognizant</p>
            <p>• Synechron</p>
            <p>• John Deere</p>
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle className="text-lg">Residential Areas</CardTitle>
          </CardHeader>
          <CardContent class="text-sm space-y-1">
            <p>• All Phase 1/2/3 societies</p>
            <p>• Hotels & PG accommodations</p>
            <p>• Any specific address</p>
          </CardContent>
        </Card>
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">Pricing</h2>

      <div class="grid md:grid-cols-2 gap-6">
        <Card class="border-2 border-emerald-500">
          <CardHeader>
            <CardTitle>Kia Carens EV</CardTitle>
            <CardDescription>6-Seater Electric SUV</CardDescription>
          </CardHeader>
          <CardContent>
            <p class="text-4xl font-bold text-emerald-600 mb-4">₹3,700</p>
            <ul class="space-y-2 text-sm">
              <li class="flex items-center gap-2"><CheckCircle2 class="h-4 w-4 text-emerald-600" /> All tolls included</li>
              <li class="flex items-center gap-2"><CheckCircle2 class="h-4 w-4 text-emerald-600" /> 6 passengers + luggage</li>
              <li class="flex items-center gap-2"><CheckCircle2 class="h-4 w-4 text-emerald-600" /> 30 min free waiting</li>
              <li class="flex items-center gap-2"><CheckCircle2 class="h-4 w-4 text-emerald-600" /> Flight delay tracking</li>
            </ul>
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle>BYD eMax 7</CardTitle>
            <CardDescription>6-Seater Luxury EV</CardDescription>
          </CardHeader>
          <CardContent>
            <p class="text-4xl font-bold text-blue-600 mb-4">₹4,200</p>
            <ul class="space-y-2 text-sm">
              <li class="flex items-center gap-2"><CheckCircle2 class="h-4 w-4 text-blue-600" /> Premium captain seats</li>
              <li class="flex items-center gap-2"><CheckCircle2 class="h-4 w-4 text-blue-600" /> Extra legroom & comfort</li>
              <li class="flex items-center gap-2"><CheckCircle2 class="h-4 w-4 text-blue-600" /> 45 min free waiting</li>
              <li class="flex items-center gap-2"><CheckCircle2 class="h-4 w-4 text-blue-600" /> Ideal for executives</li>
            </ul>
          </CardContent>
        </Card>
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">Frequently Asked Questions</h2>
      <div class="space-y-4">
        {faqs.map((faq) => (
          <Card>
            <CardHeader>
              <CardTitle className="text-lg">{faq.question}</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-sm text-muted-foreground">{faq.answer}</p>
            </CardContent>
          </Card>
        ))}
      </div>
    </section>

    <section class="mb-12">
      <Card class="bg-gradient-to-r from-emerald-600 to-green-600 text-white border-0">
        <CardContent class="pt-6 text-center">
          <h3 class="text-2xl font-bold mb-4">Book Your Mumbai Airport to Hinjewadi Cab</h3>
          <p class="mb-6 text-emerald-50">24/7 service • Fixed rates • Flight tracking • Zero surge pricing</p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href={`https://wa.me/${WHATSAPP_NUMBER}?text=Hi, I need a cab from Mumbai Airport to Hinjewadi`} target="_blank" rel="noopener noreferrer">
              <Button size="lg" variant="secondary" className="w-full sm:w-auto">
                <MessageCircle className="mr-2 h-5 w-5" />
                Book via WhatsApp
              </Button>
            </a>
            <a href={`tel:+${WHATSAPP_NUMBER}`}>
              <Button size="lg" variant="outline" className="w-full sm:w-auto bg-white text-emerald-600 hover:bg-emerald-50">
                <Phone className="mr-2 h-5 w-5" />
                Call +91 74982 64215
              </Button>
            </a>
          </div>
        </CardContent>
      </Card>
    </section>
  </div>
</MainLayout>
