---
import MainLayout from '@/layouts/MainLayout.astro';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { MapPin, Clock, IndianRupee, CheckCircle2, MessageCircle, Phone } from 'lucide-react';

const SITE_URL = import.meta.env.PUBLIC_SITE_URL || 'https://greenevcabs.com';
const WHATSAPP_NUMBER = import.meta.env.PUBLIC_WHATSAPP_NUMBER || '917498264215';
const title = 'Mumbai Airport to Aundh Cab - Electric Taxi ₹3,700';
const description = 'Mumbai Airport to Aundh electric cab. 165 km, 3-3.5 hours. IT park drop, 24/7 service, fixed rates.';
---

<MainLayout {title} {description}>
  <div class="container mx-auto px-4 py-12 max-w-4xl">
    <h1 class="text-4xl font-bold mb-4">{title}</h1>
    <p class="text-xl text-muted-foreground mb-8">{description}</p>

    <div class="grid md:grid-cols-3 gap-4 mb-8">
      <Card><CardContent class="pt-6 text-center"><MapPin class="h-8 w-8 mx-auto mb-2 text-emerald-600"/><p class="text-2xl font-bold">165 km</p></CardContent></Card>
      <Card><CardContent class="pt-6 text-center"><Clock class="h-8 w-8 mx-auto mb-2 text-blue-600"/><p class="text-2xl font-bold">3-3.5 hrs</p></CardContent></Card>
      <Card><CardContent class="pt-6 text-center"><IndianRupee class="h-8 w-8 mx-auto mb-2 text-purple-600"/><p class="text-2xl font-bold">₹3,700</p></CardContent></Card>
    </div>

    <div class="grid md:grid-cols-2 gap-6 mb-8">
      <Card class="border-2 border-emerald-500"><CardHeader><CardTitle>Kia Carens EV - ₹3,700</CardTitle></CardHeader><CardContent><ul class="space-y-2 text-sm"><li class="flex gap-2"><CheckCircle2 class="h-4 w-4 text-emerald-600 mt-0.5"/> All tolls included</li><li class="flex gap-2"><CheckCircle2 class="h-4 w-4 text-emerald-600 mt-0.5"/> Cerebrum IT Park drop</li><li class="flex gap-2"><CheckCircle2 class="h-4 w-4 text-emerald-600 mt-0.5"/> Flight tracking</li></ul></CardContent></Card>
      <Card><CardHeader><CardTitle>BYD eMax 7 - ₹4,200</CardTitle></CardHeader><CardContent><ul class="space-y-2 text-sm"><li class="flex gap-2"><CheckCircle2 class="h-4 w-4 text-blue-600 mt-0.5"/> Luxury interiors</li><li class="flex gap-2"><CheckCircle2 class="h-4 w-4 text-blue-600 mt-0.5"/> Premium comfort</li><li class="flex gap-2"><CheckCircle2 class="h-4 w-4 text-blue-600 mt-0.5"/> Extra legroom</li></ul></CardContent></Card>
    </div>

    <Card class="bg-gradient-to-r from-emerald-600 to-green-600 text-white border-0">
      <CardContent class="pt-6 text-center">
        <h3 class="text-2xl font-bold mb-4">Book Now</h3>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={`https://wa.me/${WHATSAPP_NUMBER}?text=Cab from Mumbai Airport to Aundh`} target="_blank"><Button size="lg" variant="secondary"><MessageCircle class="mr-2 h-5 w-5"/>WhatsApp</Button></a>
          <a href={`tel:+${WHATSAPP_NUMBER}`}><Button size="lg" variant="outline" className="bg-white text-emerald-600"><Phone class="mr-2 h-5 w-5"/>Call</Button></a>
        </div>
      </CardContent>
    </Card>
  </div>
</MainLayout>
