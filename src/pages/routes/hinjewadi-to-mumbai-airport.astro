---
import MainLayout from "@/layouts/MainLayout.astro";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import Breadcrumbs from "@/components/seo/Breadcrumbs.astro";
import StructuredData from "@/components/seo/StructuredData.astro";
import { generateBreadcrumbSchema } from "@/lib/seo";
import { MapPin, Clock, Check, Phone, MessageCircle, IndianRupee, Building2, Navigation, Star } from "lucide-react";

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: "Home", url: "/" },
  { name: "Routes", url: "/routes" },
  { name: "Hinjewadi to Mumbai Airport", url: "/routes/hinjewadi-to-mumbai-airport" }
]);

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Hinjewadi to Mumbai Airport Electric Cab Service",
  "serviceType": "Airport Transfer Service",
  "provider": {
    "@type": "Organization",
    "name": "GreenEVCabs",
    "telephone": "+91-7498264215"
  },
  "areaServed": [
    {
      "@type": "Place",
      "name": "Hinjewadi, Pune"
    },
    {
      "@type": "Airport",
      "name": "Mumbai Airport",
      "iataCode": "BOM"
    }
  ],
  "offers": {
    "@type": "Offer",
    "price": "2999",
    "priceCurrency": "INR"
  }
};
---

<MainLayout
  title="Hinjewadi to Mumbai Airport Cab ₹2,999 | Electric Taxi IT Park to BOM"
  description="Book electric cab from Hinjewadi (Phase 1, 2, 3, Rajiv Gandhi Infotech Park) to Mumbai Airport at ₹2,999. Corporate packages, 24/7 service, zero surge. Perfect for IT professionals."
  keywords={[
    "hinjewadi to mumbai airport cab",
    "hinjewadi mumbai airport taxi",
    "rajiv gandhi infotech park to mumbai airport",
    "hinjewadi phase 1 to mumbai airport",
    "hinjewadi phase 2 mumbai airport cab",
    "hinjewadi phase 3 to bom airport",
    "electric cab hinjewadi mumbai airport",
    "corporate cab hinjewadi airport"
  ]}
>
  <Breadcrumbs items={[
    { name: "Home", href: "/" },
    { name: "Routes", href: "/routes" },
    { name: "Hinjewadi to Mumbai Airport", href: "/routes/hinjewadi-to-mumbai-airport" }
  ]} />

  <StructuredData data={[breadcrumbSchema, serviceSchema]} />

  <div class="container px-4 py-12 md:py-16">
    <!-- Hero -->
    <div class="text-center mb-12">
      <Badge variant="secondary" className="mb-4">
        Corporate Packages Available • GST Invoice • Zero Surge
      </Badge>
      <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-6">
        Hinjewadi to Mumbai Airport Electric Cab ₹2,999
      </h1>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto leading-relaxed mb-8">
        Reliable electric cab service from Hinjewadi IT Parks (Phase 1, 2, 3) to Mumbai Airport.
        Perfect for corporate travelers with GST invoice, zero surge pricing, and 24/7 availability.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="https://wa.me/917498264215?text=Book%20Hinjewadi%20to%20Mumbai%20Airport%0APickup%3A%20Hinjewadi%20Phase%20___%0ADate%20%26%20Time%3A%20" target="_blank">
          <Button size="lg" className="bg-green-500 hover:bg-green-600 text-white">
            <MessageCircle className="mr-2 h-5 w-5" />
            Book on WhatsApp
          </Button>
        </a>
        <a href="tel:+917498264215">
          <Button size="lg" variant="outline">
            <Phone className="mr-2 h-5 w-5" />
            Call +91 74982 64215
          </Button>
        </a>
      </div>
    </div>

    <!-- Route Info -->
    <div class="mb-16 bg-primary/5 rounded-lg p-8">
      <div class="grid md:grid-cols-3 gap-6 text-center">
        <div>
          <Navigation className="h-10 w-10 text-primary mx-auto mb-3" />
          <h3 class="font-semibold mb-1">Distance</h3>
          <p class="text-2xl font-bold text-primary">155 km</p>
          <p class="text-sm text-muted-foreground">Via Expressway</p>
        </div>
        <div>
          <Clock className="h-10 w-10 text-primary mx-auto mb-3" />
          <h3 class="font-semibold mb-1">Journey Time</h3>
          <p class="text-2xl font-bold text-primary">3-3.5 hrs</p>
          <p class="text-sm text-muted-foreground">From Hinjewadi to BOM</p>
        </div>
        <div>
          <IndianRupee className="h-10 w-10 text-primary mx-auto mb-3" />
          <h3 class="font-semibold mb-1">Fixed Fare</h3>
          <p class="text-2xl font-bold text-primary">₹2,999</p>
          <p class="text-sm text-muted-foreground">All-inclusive</p>
        </div>
      </div>
    </div>

    <!-- Pickup Locations -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Pickup from All Hinjewadi Locations</h2>

      <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {[
          {
            phase: "Hinjewadi Phase 1",
            landmarks: ["Wipro", "TCS", "Persistent", "Tech Mahindra"],
            price: "₹2,999"
          },
          {
            phase: "Hinjewadi Phase 2",
            landmarks: ["Infosys", "Cognizant", "IBM", "Capgemini"],
            price: "₹2,999"
          },
          {
            phase: "Hinjewadi Phase 3",
            landmarks: ["Tata Elxsi", "L&T Infotech", "Tech Parks"],
            price: "₹2,999"
          }
        ].map((area) => (
          <Card>
            <CardHeader>
              <CardTitle class="flex items-center gap-2">
                <Building2 className="h-5 w-5 text-primary" />
                {area.phase}
              </CardTitle>
            </CardHeader>
            <CardContent>
              <p class="font-semibold text-2xl text-primary mb-3">{area.price}</p>
              <p class="text-sm text-muted-foreground mb-2">IT Parks:</p>
              <ul class="space-y-1 text-sm">
                {area.landmarks.map((landmark) => (
                  <li class="flex items-start gap-2">
                    <Check className="h-4 w-4 text-primary mt-0.5 flex-shrink-0" />
                    <span>{landmark}</span>
                  </li>
                ))}
              </ul>
            </CardContent>
          </Card>
        ))}
      </div>
    </div>

    <!-- Corporate Benefits -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Perfect for Hinjewadi IT Professionals & Corporates</h2>

      <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        <Card>
          <CardHeader>
            <CardTitle>Corporate Benefits</CardTitle>
          </CardHeader>
          <CardContent>
            <ul class="space-y-3">
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>GST Invoice:</strong> Easy expense reimbursement</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>Monthly Packages:</strong> Volume discounts for frequent travelers</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>Corporate Billing:</strong> Monthly invoicing for companies</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>Priority Booking:</strong> Guaranteed availability for registered corporates</span>
              </li>
            </ul>
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle>Service Features</CardTitle>
          </CardHeader>
          <CardContent>
            <ul class="space-y-3">
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>24/7 Service:</strong> Early morning & late night pickups</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>Zero Surge:</strong> Same ₹2,999 at 3 AM or 3 PM</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>WiFi Enabled:</strong> Work during travel</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>Professional Drivers:</strong> Well-trained, courteous</span>
              </li>
            </ul>
          </CardContent>
        </Card>
      </div>
    </div>

    <!-- Timing Guide -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Recommended Pickup Times from Hinjewadi</h2>

      <Card class="max-w-3xl mx-auto">
        <CardContent className="pt-6">
          <div class="space-y-4">
            {[
              { flight: "6:00 AM Flight", pickup: "12:00 AM (Midnight)", note: "Allow 6 hours for night traffic + check-in" },
              { flight: "9:00 AM Flight", pickup: "3:00 AM", note: "3 hours travel + 3 hours check-in buffer" },
              { flight: "12:00 PM Flight", pickup: "6:00 AM", note: "Avoid morning Hinjewadi exit traffic" },
              { flight: "6:00 PM Flight", pickup: "12:00 PM", note: "Best time, minimal traffic" },
              { flight: "9:00 PM Flight", pickup: "3:00 PM", note: "Before evening rush hour" }
            ].map((timing) => (
              <div class="flex justify-between items-center p-4 bg-muted/50 rounded">
                <div>
                  <p class="font-semibold">{timing.flight}</p>
                  <p class="text-xs text-muted-foreground">{timing.note}</p>
                </div>
                <div class="text-right">
                  <p class="text-sm text-muted-foreground">Pickup Time</p>
                  <p class="font-bold text-primary">{timing.pickup}</p>
                </div>
              </div>
            ))}
          </div>
        </CardContent>
      </Card>
    </div>

    <!-- CTA -->
    <div class="text-center bg-primary/5 rounded-lg p-8 max-w-3xl mx-auto">
      <h3 class="text-2xl font-bold mb-4">Book Your Hinjewadi to Mumbai Airport Cab</h3>
      <p class="text-muted-foreground mb-6">Corporate packages available • Same-day booking accepted</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="https://wa.me/917498264215?text=Hinjewadi%20Mumbai%20Airport%20Booking" target="_blank">
          <Button size="lg" className="bg-green-500 hover:bg-green-600 text-white">Book Now</Button>
        </a>
        <a href="/routes/pune-to-mumbai-airport">
          <Button size="lg" variant="outline">View All Pune Routes</Button>
        </a>
      </div>
    </div>
  </div>
</MainLayout>
