---
import MainLayout from '@/layouts/MainLayout.astro';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { MapPin, Clock, IndianRupee, CheckCircle2, MessageCircle, Phone } from 'lucide-react';
const WHATSAPP_NUMBER = import.meta.env.PUBLIC_WHATSAPP_NUMBER || '917498264215';
const title = 'Mumbai Airport to Hadapsar Cab - ₹3,700';
const description = 'Mumbai Airport to Hadapsar electric cab. 145 km, 3 hours. Fixed pricing.';
---
<MainLayout {title} {description}>
  <div class="container mx-auto px-4 py-12 max-w-4xl">
    <h1 class="text-4xl font-bold mb-4">{title}</h1>
    <p class="text-xl text-muted-foreground mb-8">{description}</p>
    <div class="grid md:grid-cols-3 gap-4 mb-8">
      <Card><CardContent class="pt-6 text-center"><MapPin class="h-8 w-8 mx-auto mb-2 text-emerald-600"/><p class="text-2xl font-bold">145 km</p></CardContent></Card>
      <Card><CardContent class="pt-6 text-center"><Clock class="h-8 w-8 mx-auto mb-2 text-blue-600"/><p class="text-2xl font-bold">3 hrs</p></CardContent></Card>
      <Card><CardContent class="pt-6 text-center"><IndianRupee class="h-8 w-8 mx-auto mb-2 text-purple-600"/><p class="text-2xl font-bold">₹3,700</p></CardContent></Card>
    </div>
    <div class="grid md:grid-cols-2 gap-6 mb-8">
      <Card class="border-2 border-emerald-500"><CardHeader><CardTitle>Kia Carens - ₹3,700</CardTitle></CardHeader><CardContent><p class="text-sm">6-seater, all tolls included</p></CardContent></Card>
      <Card><CardHeader><CardTitle>BYD eMax 7 - ₹4,200</CardTitle></CardHeader><CardContent><p class="text-sm">Luxury 6-seater</p></CardContent></Card>
    </div>
    <Card class="bg-gradient-to-r from-emerald-600 to-green-600 text-white border-0">
      <CardContent class="pt-6 text-center">
        <h3 class="text-2xl font-bold mb-4">Book Now</h3>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={`https://wa.me/${WHATSAPP_NUMBER}?text=Mumbai Airport to Hadapsar cab`} target="_blank"><Button size="lg" variant="secondary"><MessageCircle class="mr-2"/>WhatsApp</Button></a>
          <a href={`tel:+${WHATSAPP_NUMBER}`}><Button size="lg" variant="outline" className="bg-white text-emerald-600"><Phone class="mr-2"/>Call</Button></a>
        </div>
      </CardContent>
    </Card>
  </div>
</MainLayout>
