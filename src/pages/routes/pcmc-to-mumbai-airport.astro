---
import MainLayout from "@/layouts/MainLayout.astro";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import Breadcrumbs from "@/components/seo/Breadcrumbs.astro";
import StructuredData from "@/components/seo/StructuredData.astro";
import { generateBreadcrumbSchema } from "@/lib/seo";
import { MapPin, Clock, Check, Phone, MessageCircle, IndianRupee, Building2, Navigation, Star } from "lucide-react";

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: "Home", url: "/" },
  { name: "Routes", url: "/routes" },
  { name: "PCMC to Mumbai Airport", url: "/routes/pcmc-to-mumbai-airport" }
]);

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "PCMC to Mumbai Airport Electric Cab Service",
  "serviceType": "Airport Transfer Service",
  "provider": {
    "@type": "Organization",
    "name": "GreenEVCabs",
    "telephone": "+91-7498264215"
  },
  "areaServed": [
    {
      "@type": "Place",
      "name": "PCMC, Pune"
    },
    {
      "@type": "Airport",
      "name": "Mumbai Airport",
      "iataCode": "BOM"
    }
  ],
  "offers": {
    "@type": "Offer",
    "price": "3600",
    "priceCurrency": "INR"
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "What is the fare from PCMC to Mumbai Airport?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "The fixed fare from PCMC (Pimpri-Chinchwad Municipal Corporation) to Mumbai Airport is ₹3,600 including all tolls and airport parking charges."
      }
    },
    {
      "@type": "Question",
      "name": "How long does it take from PCMC to Mumbai Airport?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "The journey from PCMC to Mumbai Airport takes approximately 3-3.5 hours covering a distance of 160 km via the highway."
      }
    },
    {
      "@type": "Question",
      "name": "Can I book a same-day cab from PCMC to Mumbai Airport?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, same-day bookings are accepted. Contact us via WhatsApp or call us for instant confirmation on availability."
      }
    },
    {
      "@type": "Question",
      "name": "Are there any hidden charges in the ₹3,600 fare?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "No, the ₹3,600 is a completely fixed fare with zero surge pricing. All tolls, parking, and entry fees are included with no hidden charges."
      }
    },
    {
      "@type": "Question",
      "name": "What areas in PCMC are covered for pickup?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "We provide pickup from all locations in PCMC including Nigdi, Pimpri, Chinchwad, and surrounding residential and commercial areas."
      }
    }
  ]
};
---

<MainLayout
  title="PCMC to Mumbai Airport Cab ₹3,600 | Electric Taxi BOM Airport Transfer"
  description="Book electric cab from PCMC to Mumbai Airport at ₹3,600. Fixed fare, zero surge, 24/7 service. 160 km, 3-3.5 hours. Professional drivers, same-day booking."
  keywords={[
    "pcmc to mumbai airport cab",
    "pimpri chinchwad mumbai airport taxi",
    "pcmc to bom airport",
    "pcmc airport transfer",
    "nigdi to mumbai airport",
    "pimpri to mumbai airport",
    "chinchwad to mumbai airport cab"
  ]}
>
  <Breadcrumbs items={[
    { name: "Home", href: "/" },
    { name: "Routes", href: "/routes" },
    { name: "PCMC to Mumbai Airport", href: "/routes/pcmc-to-mumbai-airport" }
  ]} />

  <StructuredData data={[breadcrumbSchema, serviceSchema, faqSchema]} />

  <div class="container px-4 py-12 md:py-16">
    <!-- Hero -->
    <div class="text-center mb-12">
      <Badge variant="secondary" className="mb-4">
        Fixed Fare • Shortest Route • 24/7 Available
      </Badge>
      <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-6">
        PCMC to Mumbai Airport ₹3,600
      </h1>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto leading-relaxed mb-8">
        Convenient electric cab service from PCMC (Pimpri-Chinchwad) to Mumbai Airport. One of the shortest routes with fixed pricing, zero surge, and 24/7 availability.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="https://wa.me/917498264215?text=Book%20PCMC%20to%20Mumbai%20Airport%0ADate%20%26%20Time%3A%20" target="_blank">
          <Button size="lg" className="bg-green-500 hover:bg-green-600 text-white">
            <MessageCircle className="mr-2 h-5 w-5" />
            Book on WhatsApp
          </Button>
        </a>
        <a href="tel:+917498264215">
          <Button size="lg" variant="outline">
            <Phone className="mr-2 h-5 w-5" />
            Call +91 74982 64215
          </Button>
        </a>
      </div>
    </div>

    <!-- Route Info -->
    <div class="mb-16 bg-primary/5 rounded-lg p-8">
      <div class="grid md:grid-cols-3 gap-6 text-center">
        <div>
          <Navigation className="h-10 w-10 text-primary mx-auto mb-3" />
          <h3 class="font-semibold mb-1">Distance</h3>
          <p class="text-2xl font-bold text-primary">160 km</p>
          <p class="text-sm text-muted-foreground">Shortest Route</p>
        </div>
        <div>
          <Clock className="h-10 w-10 text-primary mx-auto mb-3" />
          <h3 class="font-semibold mb-1">Journey Time</h3>
          <p class="text-2xl font-bold text-primary">3-3.5 hrs</p>
          <p class="text-sm text-muted-foreground">From PCMC to BOM</p>
        </div>
        <div>
          <IndianRupee className="h-10 w-10 text-primary mx-auto mb-3" />
          <h3 class="font-semibold mb-1">Fixed Fare</h3>
          <p class="text-2xl font-bold text-primary">₹3,600</p>
          <p class="text-sm text-muted-foreground">All-inclusive</p>
        </div>
      </div>
    </div>

    <!-- Coverage Areas -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Pickup from All PCMC Areas</h2>

      <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {[
          {
            area: "Nigdi & Akurdi",
            locations: ["MIDC Nigdi", "Nigdi Bus Stop", "Akurdi Station", "Industrial Areas"],
            price: "₹3,600"
          },
          {
            area: "Pimpri & Chinchwad",
            locations: ["Pimpri Main Road", "Chinchwad Commercial", "Office Parks", "Residential Areas"],
            price: "₹3,600"
          },
          {
            area: "Wakad & Surroundings",
            locations: ["Wakad Areas", "Tech Parks", "Shopping Malls", "Residential Zones"],
            price: "₹3,600"
          }
        ].map((area) => (
          <Card>
            <CardHeader>
              <CardTitle class="flex items-center gap-2">
                <Building2 className="h-5 w-5 text-primary" />
                {area.area}
              </CardTitle>
            </CardHeader>
            <CardContent>
              <p class="font-semibold text-2xl text-primary mb-3">{area.price}</p>
              <ul class="space-y-1 text-sm">
                {area.locations.map((location) => (
                  <li class="flex items-start gap-2">
                    <Check className="h-4 w-4 text-primary mt-0.5 flex-shrink-0" />
                    <span>{location}</span>
                  </li>
                ))}
              </ul>
            </CardContent>
          </Card>
        ))}
      </div>
    </div>

    <!-- Fare Breakdown -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Complete Pricing Breakdown</h2>

      <Card class="max-w-3xl mx-auto">
        <CardHeader>
          <CardTitle>What's Included in ₹3,600</CardTitle>
        </CardHeader>
        <CardContent>
          <div class="space-y-4">
            <div class="flex justify-between items-center p-4 bg-muted/50 rounded">
              <span>Base Fare (160 km)</span>
              <span class="font-semibold">₹2,700</span>
            </div>
            <div class="flex justify-between items-center p-4 bg-muted/50 rounded">
              <span>Highway Toll</span>
              <span class="font-semibold">₹550</span>
            </div>
            <div class="flex justify-between items-center p-4 bg-muted/50 rounded">
              <span>Airport Parking & Entry Fee</span>
              <span class="font-semibold">₹350</span>
            </div>
            <div class="flex justify-between items-center p-4 bg-primary/10 rounded border-2 border-primary">
              <span class="font-bold">Total Fixed Fare</span>
              <span class="font-bold text-primary text-lg">₹3,600</span>
            </div>
          </div>
        </CardContent>
      </Card>
    </div>

    <!-- Service Highlights -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Premium PCMC to Mumbai Airport Service</h2>

      <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        <Card>
          <CardHeader>
            <CardTitle>Advantages of Our Service</CardTitle>
          </CardHeader>
          <CardContent>
            <ul class="space-y-3">
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>Shortest Route:</strong> 160 km, fastest journey time</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>Zero Surge Pricing:</strong> Same ₹3,600 24/7</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>Professional Drivers:</strong> Courteous and experienced</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>Real-time Tracking:</strong> GPS enabled for security</span>
              </li>
            </ul>
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle>Why Book With Us</CardTitle>
          </CardHeader>
          <CardContent>
            <ul class="space-y-3">
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>No Hidden Charges:</strong> Tolls included in fare</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>Easy Booking:</strong> WhatsApp or phone call</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>24/7 Service:</strong> Early morning to late night</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>Same-Day Booking:</strong> Instant confirmation</span>
              </li>
            </ul>
          </CardContent>
        </Card>
      </div>
    </div>

    <!-- Timing Guide -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Recommended Pickup Times from PCMC</h2>

      <Card class="max-w-3xl mx-auto">
        <CardContent className="pt-6">
          <div class="space-y-4">
            {[
              { flight: "5:30 AM Flight", pickup: "11:00 PM (Previous Day)", note: "3.5 hours travel + buffer" },
              { flight: "6:00 AM Flight", pickup: "12:00 AM (Midnight)", note: "3.5 hours + 2.5 hours check-in" },
              { flight: "9:00 AM Flight", pickup: "3:00 AM", note: "Early morning advantage" },
              { flight: "1:00 PM Flight", pickup: "7:00 AM", note: "Mid-morning departure" },
              { flight: "4:00 PM Flight", pickup: "12:00 PM", note: "Comfortable timing" },
              { flight: "8:00 PM Flight", pickup: "3:00 PM", note: "Before rush hour" }
            ].map((timing) => (
              <div class="flex justify-between items-center p-4 bg-muted/50 rounded">
                <div>
                  <p class="font-semibold">{timing.flight}</p>
                  <p class="text-xs text-muted-foreground">{timing.note}</p>
                </div>
                <div class="text-right">
                  <p class="text-sm text-muted-foreground">Pickup Time</p>
                  <p class="font-bold text-primary">{timing.pickup}</p>
                </div>
              </div>
            ))}
          </div>
        </CardContent>
      </Card>
    </div>

    <!-- Route Information -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">PCMC to Mumbai Airport Route Details</h2>

      <Card class="max-w-3xl mx-auto">
        <CardContent className="pt-6">
          <div class="space-y-4">
            <div class="border-b pb-4">
              <p class="font-semibold mb-2">Service Coverage</p>
              <p class="text-muted-foreground">Pickup from Nigdi, Pimpri, Chinchwad, Wakad, and all PCMC commercial and residential areas.</p>
            </div>
            <div class="border-b pb-4">
              <p class="font-semibold mb-2">Recommended Route</p>
              <p class="text-muted-foreground">Direct route via Western Express Highway, ensuring shortest travel time and minimal toll gates.</p>
            </div>
            <div class="border-b pb-4">
              <p class="font-semibold mb-2">Traffic Considerations</p>
              <p class="text-muted-foreground">PCMC's location offers advantage with faster highway access. Early morning and night travel ensures smooth journey.</p>
            </div>
            <div>
              <p class="font-semibold mb-2">Terminal Drop-off</p>
              <p class="text-muted-foreground">Direct drop at your terminal entrance with parking assistance and entry fee included.</p>
            </div>
          </div>
        </CardContent>
      </Card>
    </div>

    <!-- FAQ -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Frequently Asked Questions</h2>

      <div class="space-y-4 max-w-3xl mx-auto">
        {[
          {
            question: "Is ₹3,600 the final price with no extra charges?",
            answer: "Yes, absolutely. ₹3,600 is the complete and final price. All highway tolls, parking, and entry fees are included. Zero surge pricing applies 24/7."
          },
          {
            question: "What is the best time to book from PCMC?",
            answer: "You can book anytime. For early morning flights (6-9 AM), book 2-3 days in advance. For other times, same-day booking is available."
          },
          {
            question: "Do you provide return journey service?",
            answer: "Yes, we offer return cab service from Mumbai Airport back to PCMC. Contact us for round-trip package pricing."
          },
          {
            question: "What if my pickup location is outside PCMC main areas?",
            answer: "We serve pickup from any location in PCMC and surrounding areas. Call us for specific location confirmation."
          },
          {
            question: "Can I cancel or reschedule my booking?",
            answer: "Yes, cancellations/rescheduling are free up to 4 hours before pickup. Late cancellations may have charges."
          }
        ].map((faq) => (
          <Card>
            <CardHeader>
              <CardTitle class="text-lg">{faq.question}</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-muted-foreground">{faq.answer}</p>
            </CardContent>
          </Card>
        ))}
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center bg-primary/5 rounded-lg p-8 max-w-3xl mx-auto">
      <h3 class="text-2xl font-bold mb-4">Book Your PCMC to Mumbai Airport Cab</h3>
      <p class="text-muted-foreground mb-6">Fixed ₹3,600 • Zero surge • Shortest route • 24/7 service</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="https://wa.me/917498264215?text=Book%20PCMC%20to%20Mumbai%20Airport%0ADate%20%26%20Time%3A%20" target="_blank">
          <Button size="lg" className="bg-green-500 hover:bg-green-600 text-white">Book Now</Button>
        </a>
        <a href="/routes">
          <Button size="lg" variant="outline">View All Routes</Button>
        </a>
      </div>
    </div>
  </div>
</MainLayout>
