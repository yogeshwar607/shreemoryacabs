---
import MainLayout from "@/layouts/MainLayout.astro";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import Breadcrumbs from "@/components/seo/Breadcrumbs.astro";
import StructuredData from "@/components/seo/StructuredData.astro";
import { generateBreadcrumbSchema } from "@/lib/seo";
import { MapPin, Clock, Check, Phone, MessageCircle, IndianRupee, Building2, Navigation, Star } from "lucide-react";

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: "Home", url: "/" },
  { name: "Routes", url: "/routes" },
  { name: "Pimple Saudagar to Mumbai Airport", url: "/routes/pimple-saudagar-to-mumbai-airport" }
]);

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Pimple Saudagar to Mumbai Airport Electric Cab Service",
  "serviceType": "Airport Transfer Service",
  "provider": {
    "@type": "Organization",
    "name": "GreenEVCabs",
    "telephone": "+91-7498264215"
  },
  "areaServed": [
    {
      "@type": "Place",
      "name": "Pimple Saudagar, Pune"
    },
    {
      "@type": "Airport",
      "name": "Mumbai Airport",
      "iataCode": "BOM"
    }
  ],
  "offers": {
    "@type": "Offer",
    "price": "3700",
    "priceCurrency": "INR"
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "What is the cab fare from Pimple Saudagar to Mumbai Airport?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "The fixed cab fare from Pimple Saudagar to Mumbai Airport is ₹3,700 with zero surge pricing. All tolls and airport charges are included."
      }
    },
    {
      "@type": "Question",
      "name": "How far is Pimple Saudagar from Mumbai Airport?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Pimple Saudagar is approximately 175 km from Mumbai Airport with a journey time of 3.5-4 hours via the highway."
      }
    },
    {
      "@type": "Question",
      "name": "Does the ₹3,700 fare apply for early morning flights?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, the ₹3,700 fare is fixed 24/7 with zero surge pricing. Early morning, afternoon, or night - the price remains the same."
      }
    },
    {
      "@type": "Question",
      "name": "Can I book same-day cab from Pimple Saudagar?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, same-day bookings are available. Contact us via WhatsApp or phone for instant confirmation based on vehicle availability."
      }
    },
    {
      "@type": "Question",
      "name": "Are highway tolls included in the ₹3,700 fare?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, all highway tolls are included in the fixed ₹3,700 fare. Airport parking and entry fee are also included."
      }
    }
  ]
};
---

<MainLayout
  title="Pimple Saudagar to Mumbai Airport Cab ₹3,700 | Electric Taxi BOM Transfer"
  description="Book electric cab from Pimple Saudagar to Mumbai Airport at ₹3,700. Fixed fare, zero surge, 24/7 service. 175 km, 3.5-4 hours. Same-day booking available."
  keywords={[
    "pimple saudagar to mumbai airport cab",
    "pimple saudagar mumbai airport taxi",
    "pimple saudagar to bom airport",
    "pimple saudagar airport transfer",
    "electric cab pimple saudagar mumbai",
    "pimple saudagar airport service",
    "pimple saudagar mumbai airport fare"
  ]}
>
  <Breadcrumbs items={[
    { name: "Home", href: "/" },
    { name: "Routes", href: "/routes" },
    { name: "Pimple Saudagar to Mumbai Airport", href: "/routes/pimple-saudagar-to-mumbai-airport" }
  ]} />

  <StructuredData data={[breadcrumbSchema, serviceSchema, faqSchema]} />

  <div class="container px-4 py-12 md:py-16">
    <!-- Hero -->
    <div class="text-center mb-12">
      <Badge variant="secondary" className="mb-4">
        Fixed Fare • Professional Drivers • 24/7 Available
      </Badge>
      <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-6">
        Pimple Saudagar to Mumbai Airport ₹3,700
      </h1>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto leading-relaxed mb-8">
        Dependable electric cab service from Pimple Saudagar to Mumbai Airport. Fixed pricing, zero surge, and professional drivers available 24/7 for comfortable airport transfers.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="https://wa.me/917498264215?text=Book%20Pimple%20Saudagar%20to%20Mumbai%20Airport%0ADate%20%26%20Time%3A%20" target="_blank">
          <Button size="lg" className="bg-green-500 hover:bg-green-600 text-white">
            <MessageCircle className="mr-2 h-5 w-5" />
            Book on WhatsApp
          </Button>
        </a>
        <a href="tel:+917498264215">
          <Button size="lg" variant="outline">
            <Phone className="mr-2 h-5 w-5" />
            Call +91 74982 64215
          </Button>
        </a>
      </div>
    </div>

    <!-- Route Info -->
    <div class="mb-16 bg-primary/5 rounded-lg p-8">
      <div class="grid md:grid-cols-3 gap-6 text-center">
        <div>
          <Navigation className="h-10 w-10 text-primary mx-auto mb-3" />
          <h3 class="font-semibold mb-1">Distance</h3>
          <p class="text-2xl font-bold text-primary">175 km</p>
          <p class="text-sm text-muted-foreground">Via Highway Route</p>
        </div>
        <div>
          <Clock className="h-10 w-10 text-primary mx-auto mb-3" />
          <h3 class="font-semibold mb-1">Journey Time</h3>
          <p class="text-2xl font-bold text-primary">3.5-4 hrs</p>
          <p class="text-sm text-muted-foreground">From Pimple Saudagar to BOM</p>
        </div>
        <div>
          <IndianRupee className="h-10 w-10 text-primary mx-auto mb-3" />
          <h3 class="font-semibold mb-1">Fixed Fare</h3>
          <p class="text-2xl font-bold text-primary">₹3,700</p>
          <p class="text-sm text-muted-foreground">All-inclusive Price</p>
        </div>
      </div>
    </div>

    <!-- Pricing Details -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Transparent Cost Breakdown</h2>

      <Card class="max-w-3xl mx-auto">
        <CardHeader>
          <CardTitle>What's Included in ₹3,700</CardTitle>
        </CardHeader>
        <CardContent>
          <div class="space-y-4">
            <div class="flex justify-between items-center p-4 bg-muted/50 rounded">
              <span>Base Fare (175 km)</span>
              <span class="font-semibold">₹2,800</span>
            </div>
            <div class="flex justify-between items-center p-4 bg-muted/50 rounded">
              <span>Highway Toll Fees</span>
              <span class="font-semibold">₹600</span>
            </div>
            <div class="flex justify-between items-center p-4 bg-muted/50 rounded">
              <span>Airport Parking & Entry Charges</span>
              <span class="font-semibold">₹300</span>
            </div>
            <div class="flex justify-between items-center p-4 bg-primary/10 rounded border-2 border-primary">
              <span class="font-bold">Total Fixed Fare</span>
              <span class="font-bold text-primary text-lg">₹3,700</span>
            </div>
          </div>
        </CardContent>
      </Card>
    </div>

    <!-- Service Areas -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Pickup from Pimple Saudagar & Nearby Areas</h2>

      <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {[
          {
            area: "Pimple Saudagar Main",
            locations: ["Pimple Saudagar Road", "Residential Complexes", "Market Areas", "Business Districts"],
            price: "₹3,700"
          },
          {
            area: "Pimple Gurav",
            locations: ["Pimple Gurav Village", "Tech Parks", "IT Companies", "Commercial Zones"],
            price: "₹3,700"
          },
          {
            area: "Adjacent Areas",
            locations: ["Chakan Road", "Talegaon", "Mulshi Road", "Residential Societies"],
            price: "₹3,700"
          }
        ].map((area) => (
          <Card>
            <CardHeader>
              <CardTitle class="flex items-center gap-2">
                <Building2 className="h-5 w-5 text-primary" />
                {area.area}
              </CardTitle>
            </CardHeader>
            <CardContent>
              <p class="font-semibold text-2xl text-primary mb-3">{area.price}</p>
              <ul class="space-y-1 text-sm">
                {area.locations.map((location) => (
                  <li class="flex items-start gap-2">
                    <Check className="h-4 w-4 text-primary mt-0.5 flex-shrink-0" />
                    <span>{location}</span>
                  </li>
                ))}
              </ul>
            </CardContent>
          </Card>
        ))}
      </div>
    </div>

    <!-- Service Highlights -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Premium Service Features</h2>

      <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        <Card>
          <CardHeader>
            <CardTitle>Reliability Assured</CardTitle>
          </CardHeader>
          <CardContent>
            <ul class="space-y-3">
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>Trained Professionals:</strong> Courteous and experienced drivers</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>Vehicle Maintenance:</strong> Regular checks and servicing</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>Live GPS Tracking:</strong> Monitor journey in real-time</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>Full Insurance:</strong> Comprehensive coverage for peace of mind</span>
              </li>
            </ul>
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle>Best Value Guarantee</CardTitle>
          </CardHeader>
          <CardContent>
            <ul class="space-y-3">
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>Zero Surge Pricing:</strong> ₹3,700 fixed 24/7/365</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>No Hidden Charges:</strong> All costs clearly included</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>Easy WhatsApp Booking:</strong> Quick confirmation</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>24/7 Service:</strong> Anytime booking and travel</span>
              </li>
            </ul>
          </CardContent>
        </Card>
      </div>
    </div>

    <!-- Timing Guide -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Recommended Pickup Times from Pimple Saudagar</h2>

      <Card class="max-w-3xl mx-auto">
        <CardContent className="pt-6">
          <div class="space-y-4">
            {[
              { flight: "5:30 AM Flight", pickup: "11:00 PM (Prev Day)", note: "Account for night travel" },
              { flight: "6:00 AM Flight", pickup: "12:00 AM (Midnight)", note: "3.5 hours travel + 2.5 hours buffer" },
              { flight: "9:00 AM Flight", pickup: "3:00 AM", note: "Optimal early morning timing" },
              { flight: "12:00 PM Flight", pickup: "6:00 AM", note: "Allow comfortable morning departure" },
              { flight: "3:00 PM Flight", pickup: "9:00 AM", note: "Mid-morning convenient time" },
              { flight: "6:00 PM Flight", pickup: "12:00 PM", note: "Ideal daytime pickup" }
            ].map((timing) => (
              <div class="flex justify-between items-center p-4 bg-muted/50 rounded">
                <div>
                  <p class="font-semibold">{timing.flight}</p>
                  <p class="text-xs text-muted-foreground">{timing.note}</p>
                </div>
                <div class="text-right">
                  <p class="text-sm text-muted-foreground">Pickup Time</p>
                  <p class="font-bold text-primary">{timing.pickup}</p>
                </div>
              </div>
            ))}
          </div>
        </CardContent>
      </Card>
    </div>

    <!-- Route Information -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Route Details: Pimple Saudagar to Mumbai Airport</h2>

      <Card class="max-w-3xl mx-auto">
        <CardContent className="pt-6">
          <div class="space-y-4">
            <div class="border-b pb-4">
              <p class="font-semibold mb-2">Comprehensive Coverage</p>
              <p class="text-muted-foreground">We provide pickup from any location in Pimple Saudagar, including residential societies, offices, hotels, and commercial centers.</p>
            </div>
            <div class="border-b pb-4">
              <p class="font-semibold mb-2">Highway Route</p>
              <p class="text-muted-foreground">Recommended route via Expressway and Western Express Highway. Fastest and most efficient path to Mumbai Airport.</p>
            </div>
            <div class="border-b pb-4">
              <p class="font-semibold mb-2">Toll Coverage</p>
              <p class="text-muted-foreground">All highway toll charges are included in the fixed ₹3,700 fare. Standard tolls at Katraj and other sections covered.</p>
            </div>
            <div>
              <p class="font-semibold mb-2">Airport Drop</p>
              <p class="text-muted-foreground">Direct terminal drop-off with parking assistance. Airport entry fee and parking charges fully included.</p>
            </div>
          </div>
        </CardContent>
      </Card>
    </div>

    <!-- FAQ -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Frequently Asked Questions</h2>

      <div class="space-y-4 max-w-3xl mx-auto">
        {[
          {
            question: "Is the ₹3,700 price guaranteed with no extra charges?",
            answer: "Yes, ₹3,700 is the complete and final price with zero surge pricing. No hidden charges for tolls or timing."
          },
          {
            question: "Can I request a specific car type?",
            answer: "We provide clean, comfortable vehicles. Specific car requests can be made at booking, subject to availability."
          },
          {
            question: "What if I need to make a stop on the way?",
            answer: "The fare covers direct airport travel. Additional stops may incur charges. Inform us at booking for special requirements."
          },
          {
            question: "Is round-trip service available from Pimple Saudagar?",
            answer: "Yes, round-trip packages are available with special pricing. Contact us for return journey quotation from Mumbai Airport."
          },
          {
            question: "How far in advance should I book?",
            answer: "For early morning flights, book 2-3 days prior for guaranteed availability. Other times, same-day booking is usually possible."
          }
        ].map((faq) => (
          <Card>
            <CardHeader>
              <CardTitle class="text-lg">{faq.question}</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-muted-foreground">{faq.answer}</p>
            </CardContent>
          </Card>
        ))}
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center bg-primary/5 rounded-lg p-8 max-w-3xl mx-auto">
      <h3 class="text-2xl font-bold mb-4">Book Your Pimple Saudagar to Mumbai Airport Cab</h3>
      <p class="text-muted-foreground mb-6">Fixed ₹3,700 • Zero surge • Professional drivers • 24/7 available</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="https://wa.me/917498264215?text=Book%20Pimple%20Saudagar%20to%20Mumbai%20Airport%0ADate%20%26%20Time%3A%20" target="_blank">
          <Button size="lg" className="bg-green-500 hover:bg-green-600 text-white">Book Now</Button>
        </a>
        <a href="/routes">
          <Button size="lg" variant="outline">View All Routes</Button>
        </a>
      </div>
    </div>
  </div>
</MainLayout>
