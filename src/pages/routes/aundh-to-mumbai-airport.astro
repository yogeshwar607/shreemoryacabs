---
import MainLayout from "@/layouts/MainLayout.astro";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import Breadcrumbs from "@/components/seo/Breadcrumbs.astro";
import StructuredData from "@/components/seo/StructuredData.astro";
import { generateBreadcrumbSchema } from "@/lib/seo";
import { MapPin, Clock, Check, Phone, MessageCircle, IndianRupee, Building2, Navigation, Star } from "lucide-react";

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: "Home", url: "/" },
  { name: "Routes", url: "/routes" },
  { name: "Aundh to Mumbai Airport", url: "/routes/aundh-to-mumbai-airport" }
]);

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Aundh to Mumbai Airport Electric Cab Service",
  "serviceType": "Airport Transfer Service",
  "provider": {
    "@type": "Organization",
    "name": "GreenEVCabs",
    "telephone": "+91-7498264215"
  },
  "areaServed": [
    {
      "@type": "Place",
      "name": "Aundh, Pune"
    },
    {
      "@type": "Airport",
      "name": "Mumbai Airport",
      "iataCode": "BOM"
    }
  ],
  "offers": {
    "@type": "Offer",
    "price": "3700",
    "priceCurrency": "INR"
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "What is the cab fare from Aundh to Mumbai Airport?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "The fixed fare from Aundh to Mumbai Airport is ₹3,700 with zero surge pricing. All tolls and airport parking are included in this price."
      }
    },
    {
      "@type": "Question",
      "name": "How far is Aundh from Mumbai Airport?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Aundh is approximately 180 km from Mumbai Airport with a journey time of 3.5-4 hours via the highway."
      }
    },
    {
      "@type": "Question",
      "name": "Is the ₹3,700 fare from Aundh fixed for early morning bookings?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, we offer zero surge pricing. The ₹3,700 fare is fixed 24/7, whether you book at midnight or noon."
      }
    },
    {
      "@type": "Question",
      "name": "Can I book a cab from Aundh for same-day airport travel?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, same-day bookings are accepted. Contact us via WhatsApp or call for instant confirmation based on availability."
      }
    },
    {
      "@type": "Question",
      "name": "Which areas in Aundh are covered for pickup?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "We provide pickup from all Aundh locations including Aundh proper, surrounding residential areas, and commercial zones in West Pune."
      }
    }
  ]
};
---

<MainLayout
  title="Aundh to Mumbai Airport Cab ₹3,700 | Electric Taxi BOM Airport Transfer"
  description="Book electric cab from Aundh to Mumbai Airport at ₹3,700. Fixed fare, zero surge, 24/7 availability. 180 km, 3.5-4 hours. Professional drivers, same-day booking."
  keywords={[
    "aundh to mumbai airport cab",
    "aundh mumbai airport taxi",
    "aundh to bom airport",
    "aundh airport transfer",
    "west pune to mumbai airport",
    "aundh airport cab service",
    "aundh mumbai airport fare"
  ]}
>
  <Breadcrumbs items={[
    { name: "Home", href: "/" },
    { name: "Routes", href: "/routes" },
    { name: "Aundh to Mumbai Airport", href: "/routes/aundh-to-mumbai-airport" }
  ]} />

  <StructuredData data={[breadcrumbSchema, serviceSchema, faqSchema]} />

  <div class="container px-4 py-12 md:py-16">
    <!-- Hero -->
    <div class="text-center mb-12">
      <Badge variant="secondary" className="mb-4">
        Fixed ₹3,700 • Zero Surge • 24/7 Service
      </Badge>
      <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-6">
        Aundh to Mumbai Airport ₹3,700
      </h1>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto leading-relaxed mb-8">
        Reliable electric cab service from Aundh to Mumbai Airport. Fixed pricing with zero surge, professional drivers, and 24/7 availability for all your travel needs.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="https://wa.me/917498264215?text=Book%20Aundh%20to%20Mumbai%20Airport%0ADate%20%26%20Time%3A%20" target="_blank">
          <Button size="lg" className="bg-green-500 hover:bg-green-600 text-white">
            <MessageCircle className="mr-2 h-5 w-5" />
            Book on WhatsApp
          </Button>
        </a>
        <a href="tel:+917498264215">
          <Button size="lg" variant="outline">
            <Phone className="mr-2 h-5 w-5" />
            Call +91 74982 64215
          </Button>
        </a>
      </div>
    </div>

    <!-- Route Info -->
    <div class="mb-16 bg-primary/5 rounded-lg p-8">
      <div class="grid md:grid-cols-3 gap-6 text-center">
        <div>
          <Navigation className="h-10 w-10 text-primary mx-auto mb-3" />
          <h3 class="font-semibold mb-1">Distance</h3>
          <p class="text-2xl font-bold text-primary">180 km</p>
          <p class="text-sm text-muted-foreground">Via Highway</p>
        </div>
        <div>
          <Clock className="h-10 w-10 text-primary mx-auto mb-3" />
          <h3 class="font-semibold mb-1">Journey Time</h3>
          <p class="text-2xl font-bold text-primary">3.5-4 hrs</p>
          <p class="text-sm text-muted-foreground">From Aundh to BOM</p>
        </div>
        <div>
          <IndianRupee className="h-10 w-10 text-primary mx-auto mb-3" />
          <h3 class="font-semibold mb-1">Fixed Fare</h3>
          <p class="text-2xl font-bold text-primary">₹3,700</p>
          <p class="text-sm text-muted-foreground">Tolls Included</p>
        </div>
      </div>
    </div>

    <!-- Fare Breakdown -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Transparent Pricing</h2>

      <Card class="max-w-3xl mx-auto">
        <CardHeader>
          <CardTitle>Complete Cost Breakdown for ₹3,700</CardTitle>
        </CardHeader>
        <CardContent>
          <div class="space-y-4">
            <div class="flex justify-between items-center p-4 bg-muted/50 rounded">
              <span>Base Fare (180 km)</span>
              <span class="font-semibold">₹2,850</span>
            </div>
            <div class="flex justify-between items-center p-4 bg-muted/50 rounded">
              <span>Highway Toll Charges</span>
              <span class="font-semibold">₹600</span>
            </div>
            <div class="flex justify-between items-center p-4 bg-muted/50 rounded">
              <span>Airport Parking & Entry Fee</span>
              <span class="font-semibold">₹250</span>
            </div>
            <div class="flex justify-between items-center p-4 bg-primary/10 rounded border-2 border-primary">
              <span class="font-bold">Total Fixed Fare</span>
              <span class="font-bold text-primary text-lg">₹3,700</span>
            </div>
          </div>
        </CardContent>
      </Card>
    </div>

    <!-- Pickup Areas -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Pickup from All Aundh Locations</h2>

      <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {[
          {
            area: "Aundh Proper",
            locations: ["Aundh Main Road", "Market Areas", "Residential Zones", "Shopping Areas"],
            price: "₹3,700"
          },
          {
            area: "West Pune Adjacent",
            locations: ["Baner", "Balewadi", "Pashan", "Mundhwa Road"],
            price: "₹3,700"
          },
          {
            area: "Surrounding Areas",
            locations: ["Katraj Areas", "Sinhagad Road", "Viman Nagar", "Munjaba Valley"],
            price: "₹3,700"
          }
        ].map((area) => (
          <Card>
            <CardHeader>
              <CardTitle class="flex items-center gap-2">
                <Building2 className="h-5 w-5 text-primary" />
                {area.area}
              </CardTitle>
            </CardHeader>
            <CardContent>
              <p class="font-semibold text-2xl text-primary mb-3">{area.price}</p>
              <ul class="space-y-1 text-sm">
                {area.locations.map((location) => (
                  <li class="flex items-start gap-2">
                    <Check className="h-4 w-4 text-primary mt-0.5 flex-shrink-0" />
                    <span>{location}</span>
                  </li>
                ))}
              </ul>
            </CardContent>
          </Card>
        ))}
      </div>
    </div>

    <!-- Service Features -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Why Choose Our Aundh to Mumbai Airport Service</h2>

      <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        <Card>
          <CardHeader>
            <CardTitle>Safety & Comfort</CardTitle>
          </CardHeader>
          <CardContent>
            <ul class="space-y-3">
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>Experienced Drivers:</strong> 10+ years highway experience</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>Well-Maintained Fleet:</strong> Regular servicing and inspections</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>GPS Live Tracking:</strong> Share location with family</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>Comprehensive Insurance:</strong> Full coverage included</span>
              </li>
            </ul>
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle>Value & Convenience</CardTitle>
          </CardHeader>
          <CardContent>
            <ul class="space-y-3">
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>Zero Surge Pricing:</strong> Same rate 24/7/365</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>All Charges Included:</strong> No hidden fees</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>Instant Booking:</strong> Quick WhatsApp confirmation</span>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                <span><strong>24/7 Availability:</strong> Book anytime, any day</span>
              </li>
            </ul>
          </CardContent>
        </Card>
      </div>
    </div>

    <!-- Timing Guide -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Recommended Pickup Times from Aundh</h2>

      <Card class="max-w-3xl mx-auto">
        <CardContent className="pt-6">
          <div class="space-y-4">
            {[
              { flight: "5:00 AM Flight", pickup: "10:30 PM (Prev Day)", note: "Account for night traffic" },
              { flight: "6:30 AM Flight", pickup: "12:30 AM (Midnight)", note: "3.5 hours + 2.5 hours buffer" },
              { flight: "9:00 AM Flight", pickup: "3:00 AM", note: "Early morning optimal" },
              { flight: "12:00 PM Flight", pickup: "6:00 AM", note: "Comfortable morning start" },
              { flight: "3:00 PM Flight", pickup: "9:00 AM", note: "Late morning pickup" },
              { flight: "6:00 PM Flight", pickup: "12:00 PM", note: "Ideal midday timing" }
            ].map((timing) => (
              <div class="flex justify-between items-center p-4 bg-muted/50 rounded">
                <div>
                  <p class="font-semibold">{timing.flight}</p>
                  <p class="text-xs text-muted-foreground">{timing.note}</p>
                </div>
                <div class="text-right">
                  <p class="text-sm text-muted-foreground">Pickup Time</p>
                  <p class="font-bold text-primary">{timing.pickup}</p>
                </div>
              </div>
            ))}
          </div>
        </CardContent>
      </Card>
    </div>

    <!-- Route Details -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Journey Route & Details</h2>

      <Card class="max-w-3xl mx-auto">
        <CardContent className="pt-6">
          <div class="space-y-4">
            <div class="border-b pb-4">
              <p class="font-semibold mb-2">Pickup Flexibility</p>
              <p class="text-muted-foreground">Pickup from any location in Aundh including homes, hotels, offices, and shopping centers. We come to your location.</p>
            </div>
            <div class="border-b pb-4">
              <p class="font-semibold mb-2">Highway Route</p>
              <p class="text-muted-foreground">Primary route via Sinhagad Road and Western Express Highway for smooth and efficient travel to Mumbai.</p>
            </div>
            <div class="border-b pb-4">
              <p class="font-semibold mb-2">Toll Information</p>
              <p class="text-muted-foreground">Toll gates at Katraj and other highway sections are included in the fixed ₹3,700 fare. No additional charges.</p>
            </div>
            <div>
              <p class="font-semibold mb-2">Airport Services</p>
              <p class="text-muted-foreground">Drop-off at your airline terminal with parking assistance. Entry fee and parking included in total fare.</p>
            </div>
          </div>
        </CardContent>
      </Card>
    </div>

    <!-- FAQ -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Frequently Asked Questions</h2>

      <div class="space-y-4 max-w-3xl mx-auto">
        {[
          {
            question: "Is ₹3,700 the absolute final price from Aundh?",
            answer: "Yes, ₹3,700 is completely inclusive. No surge pricing, no hidden charges. The price is fixed 24/7/365."
          },
          {
            question: "What if I need to extend the journey or make stops?",
            answer: "The fare includes direct travel to airport. Additional stops or waiting time charges apply separately. Inform us at booking."
          },
          {
            question: "Can I book a round trip from Aundh?",
            answer: "Yes, we offer round-trip packages with special pricing. Contact us for quotation on return journey from Mumbai Airport."
          },
          {
            question: "What documents are needed for booking?",
            answer: "No documents needed. Just provide your phone number, pickup address, and flight details. We handle the rest."
          },
          {
            question: "Is early morning booking from Aundh guaranteed?",
            answer: "Early morning slots book quickly. We recommend booking 2-3 days in advance for 5-9 AM pickups to ensure availability."
          }
        ].map((faq) => (
          <Card>
            <CardHeader>
              <CardTitle class="text-lg">{faq.question}</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-muted-foreground">{faq.answer}</p>
            </CardContent>
          </Card>
        ))}
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center bg-primary/5 rounded-lg p-8 max-w-3xl mx-auto">
      <h3 class="text-2xl font-bold mb-4">Book Your Aundh to Mumbai Airport Cab</h3>
      <p class="text-muted-foreground mb-6">Fixed ₹3,700 • Zero surge • 24/7 available • Same-day booking</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="https://wa.me/917498264215?text=Book%20Aundh%20to%20Mumbai%20Airport%0ADate%20%26%20Time%3A%20" target="_blank">
          <Button size="lg" className="bg-green-500 hover:bg-green-600 text-white">Book Now</Button>
        </a>
        <a href="/routes">
          <Button size="lg" variant="outline">View All Routes</Button>
        </a>
      </div>
    </div>
  </div>
</MainLayout>
