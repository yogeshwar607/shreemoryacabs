---
import MainLayout from "@/layouts/MainLayout.astro";
import { Button } from "@/components/ui/button";
import { Card } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
---

<MainLayout
  title="Electric Cab Hadapsar to Mumbai Airport ₹2,700 | Shree Morya Cabs"
  description="Electric cab from Hadapsar, Magarpatta to Mumbai Airport at ₹2,700. IT park pickups, reliable, friendly service. Book 24/7."
  keywords={["hadapsar mumbai airport cab", "magarpatta airport taxi", "electric cab hadapsar"]}
>
  <section class="w-full py-12 md:py-24 bg-gradient-to-b from-orange-50 dark:from-orange-950/20 to-background">
    <div class="container px-4 md:px-6">
      <div class="max-w-4xl mx-auto">
        <Badge variant="secondary" className="mb-4">Hadapsar • Magarpatta • Mundhwa</Badge>
        <h1 class="text-3xl font-bold sm:text-4xl md:text-5xl mb-4">Electric Cab Hadapsar to Mumbai Airport</h1>
        <p class="text-xl text-muted-foreground mb-6">Reliable electric cab service from Hadapsar, Magarpatta, Mundhwa to Mumbai Airport. ₹2,700 fixed rate.</p>
        <a href="https://wa.me/917498264215?text=Book%20Hadapsar%20Mumbai%20Airport" target="_blank"><Button size="lg" className="bg-orange-600">Book on WhatsApp</Button></a>
      </div>
    </div>
  </section>
  <section class="w-full py-12 bg-muted/30">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-2xl font-bold mb-4">Serving Hadapsar IT Professionals</h2>
        <p class="text-muted-foreground">Pickup from Magarpatta City, Amanora, Seasons Mall area. Corporate packages with GST invoice available.</p>
      </div>
    </div>
  </section>
</MainLayout>
