---
import MainLayout from "@/layouts/MainLayout.astro";
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import ReviewWidget from "@/components/ReviewWidget.astro";
import { Check, X, Shield, Phone, MessageCircle, MapPin, Users, AlertCircle, ChevronRight, Star, Camera, FileText, Lock, Navigation, Zap, Car, ThumbsUp, Bell, Eye, Heart, UserCheck, Activity } from "lucide-react";

const title = "Safety Guide for Electric Cab Travel: Pune to Mumbai Airport 2025";
const description = "Complete safety guide for electric cab travel from Pune to Mumbai Airport. Learn about driver verification, vehicle safety features, tracking, emergency protocols, and passenger rights in 2025.";
const keywords = [
  "electric cab safety pune mumbai",
  "safe cab travel pune",
  "ev cab safety features",
  "verified drivers pune cabs",
  "cab safety guide mumbai airport",
  "electric vehicle safety",
  "passenger safety pune mumbai",
  "women safety electric cab",
  "night travel safety pune",
  "cab tracking pune mumbai",
  "emergency protocol cab travel",
  "safe airport transfer pune",
  "trusted cab service pune"
];

const publishDate = "2025-01-30";
const author = "Shree Morya Cabs Team";

const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "author": {
    "@type": "Organization",
    "name": author
  },
  "publisher": {
    "@type": "Organization",
    "name": "Shree Morya Cabs",
    "logo": {
      "@type": "ImageObject",
      "url": "https://shreemoryacabs.hello-22d.workers.dev/logo.png"
    }
  },
  "datePublished": publishDate,
  "dateModified": publishDate
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Are electric cabs safe for long-distance travel?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, electric cabs are extremely safe for long-distance travel. Modern EVs like Kia Carens and BYD eMAX 7 have advanced safety features including 6+ airbags, ABS, ESC, and crash-tested 5-star ratings. Electric vehicles have lower center of gravity making them more stable, and battery management systems prevent fire risks."
      }
    },
    {
      "@type": "Question",
      "name": "How do you verify drivers for safety?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "All drivers undergo comprehensive verification: police background check, driving license verification (minimum 5 years), vehicle registration check, personal references, training certification, and medical fitness certificate. Drivers are re-verified every 6 months and ratings are monitored continuously."
      }
    },
    {
      "@type": "Question",
      "name": "Is it safe for women to travel alone in electric cabs?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Absolutely yes. We have special women safety features: live GPS tracking shared with family, 24/7 support helpline, verified drivers with clean records, trip sharing via WhatsApp, SOS button in tracking app, and option to request women-preferred drivers. Over 40% of our solo travelers are women."
      }
    },
    {
      "@type": "Question",
      "name": "What happens in case of emergency during the trip?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "We have comprehensive emergency protocols: 24/7 emergency helpline, live GPS monitoring, nearest hospital database, roadside assistance tie-ups, insurance coverage for passengers, and direct police coordination. All vehicles have first-aid kits, emergency tools, and backup communication devices."
      }
    },
    {
      "@type": "Question",
      "name": "Can I share my trip details with family?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, you'll receive a live tracking link via WhatsApp before your trip starts. Share this link with family members who can monitor your journey in real-time, see driver details, and get arrival ETAs. The link remains active throughout the trip and for 1 hour after completion."
      }
    },
    {
      "@type": "Question",
      "name": "Are electric vehicles safe in terms of battery fire risk?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Modern electric vehicles are statistically safer than petrol/diesel vehicles regarding fire risk. EV batteries have multiple safety layers: thermal management systems, fire-resistant casing, automatic cutoff systems, and crash-protection design. Our fleet uses only certified OEM vehicles with proven safety records and zero fire incidents in 2,000+ trips."
      }
    }
  ]
};
---

<MainLayout
  title={title}
  description={description}
  keywords={keywords}
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  </Fragment>

  <article class="container mx-auto px-4 py-8 max-w-4xl">
    <!-- Hero Section -->
    <header class="mb-8">
      <div class="flex flex-wrap gap-2 mb-4">
        <Badge variant="secondary">Safety Guide</Badge>
        <Badge variant="secondary">Electric Cabs</Badge>
        <Badge variant="secondary">2025 Updated</Badge>
      </div>

      <h1 class="text-4xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-blue-600 to-cyan-600 bg-clip-text text-transparent">
        {title}
      </h1>

      <p class="text-xl text-muted-foreground mb-6">
        Your safety is our top priority. Complete guide to safe electric cab travel from Pune to Mumbai
        Airport covering driver verification, vehicle safety, tracking, emergency protocols, and passenger rights.
      </p>

      <div class="flex flex-wrap gap-4 text-sm text-muted-foreground">
        <span class="flex items-center gap-1">
          <Shield className="h-4 w-4" />
          Safety First
        </span>
        <span class="flex items-center gap-1">
          <UserCheck className="h-4 w-4" />
          Verified Drivers
        </span>
        <span class="flex items-center gap-1">
          <Navigation className="h-4 w-4" />
          Live Tracking
        </span>
        <span class="flex items-center gap-1">
          <Phone className="h-4 w-4" />
          24/7 Support
        </span>
      </div>
    </header>

    <!-- Safety Statistics -->
    <Card className="mb-8 border-blue-200 bg-gradient-to-br from-blue-50 to-cyan-50">
      <CardContent className="pt-6">
        <h2 class="text-2xl font-bold mb-6 text-center">Our Safety Track Record</h2>
        <div class="grid md:grid-cols-4 gap-6">
          <div class="text-center">
            <div class="text-4xl font-bold text-blue-600 mb-2">2,000+</div>
            <div class="text-sm text-muted-foreground">Safe Trips Completed</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-green-600 mb-2">Zero</div>
            <div class="text-sm text-muted-foreground">Major Incidents</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-purple-600 mb-2">4.9/5</div>
            <div class="text-sm text-muted-foreground">Safety Rating</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-orange-600 mb-2">100%</div>
            <div class="text-sm text-muted-foreground">Driver Verification</div>
          </div>
        </div>
      </CardContent>
    </Card>

    <!-- Driver Safety & Verification -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6 flex items-center gap-2">
        <UserCheck className="h-8 w-8 text-blue-600" />
        Driver Safety & Verification
      </h2>

      <p class="text-lg text-muted-foreground mb-6">
        Every driver goes through rigorous verification before joining our fleet. Here's our comprehensive screening process:
      </p>

      <div class="grid md:grid-cols-2 gap-6 mb-6">
        <Card>
          <CardHeader>
            <CardTitle className="flex items-center gap-2">
              <FileText className="h-5 w-5 text-blue-600" />
              Document Verification
            </CardTitle>
          </CardHeader>
          <CardContent>
            <ul class="space-y-3">
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-green-600 mt-0.5" />
                <div>
                  <p class="font-semibold text-sm">Driving License Check</p>
                  <p class="text-xs text-muted-foreground">Minimum 5 years valid commercial license, verified with RTO database</p>
                </div>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-green-600 mt-0.5" />
                <div>
                  <p class="font-semibold text-sm">Police Verification</p>
                  <p class="text-xs text-muted-foreground">Criminal background check, address verification, character certificate</p>
                </div>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-green-600 mt-0.5" />
                <div>
                  <p class="font-semibold text-sm">Identity Proof</p>
                  <p class="text-xs text-muted-foreground">Aadhaar, PAN card verification with photograph</p>
                </div>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-green-600 mt-0.5" />
                <div>
                  <p class="font-semibold text-sm">Address Verification</p>
                  <p class="text-xs text-muted-foreground">Local police verification of permanent and current address</p>
                </div>
              </li>
            </ul>
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle className="flex items-center gap-2">
              <Activity className="h-5 w-5 text-blue-600" />
              Skills & Training
            </CardTitle>
          </CardHeader>
          <CardContent>
            <ul class="space-y-3">
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-green-600 mt-0.5" />
                <div>
                  <p class="font-semibold text-sm">Driving Test</p>
                  <p class="text-xs text-muted-foreground">Practical driving assessment on Pune-Mumbai route, expressway experience</p>
                </div>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-green-600 mt-0.5" />
                <div>
                  <p class="font-semibold text-sm">Safety Training</p>
                  <p class="text-xs text-muted-foreground">Emergency protocols, first aid, defensive driving techniques</p>
                </div>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-green-600 mt-0.5" />
                <div>
                  <p class="font-semibold text-sm">Customer Service Training</p>
                  <p class="text-xs text-muted-foreground">Professional behavior, communication, passenger comfort</p>
                </div>
              </li>
              <li class="flex items-start gap-2">
                <Check className="h-5 w-5 text-green-600 mt-0.5" />
                <div>
                  <p class="font-semibold text-sm">Medical Fitness</p>
                  <p class="text-xs text-muted-foreground">Annual health checkup, eyesight test, fitness certificate</p>
                </div>
              </li>
            </ul>
          </CardContent>
        </Card>
      </div>

      <Card className="border-green-200 bg-green-50 dark:bg-green-900/30">
        <CardContent className="pt-6">
          <h3 class="font-bold mb-4 flex items-center gap-2">
            <Shield className="h-5 w-5 text-green-600" />
            Ongoing Safety Monitoring
          </h3>
          <div class="grid md:grid-cols-2 gap-3">
            <div class="flex items-start gap-2 text-sm">
              <Check className="h-4 w-4 text-green-600 mt-0.5" />
              <span><strong>Re-verification:</strong> Every 6 months all documents re-checked</span>
            </div>
            <div class="flex items-start gap-2 text-sm">
              <Check className="h-4 w-4 text-green-600 mt-0.5" />
              <span><strong>Rating System:</strong> Drivers below 4.5 stars undergo retraining</span>
            </div>
            <div class="flex items-start gap-2 text-sm">
              <Check className="h-4 w-4 text-green-600 mt-0.5" />
              <span><strong>GPS Monitoring:</strong> Real-time driving behavior tracking</span>
            </div>
            <div class="flex items-start gap-2 text-sm">
              <Check className="h-4 w-4 text-green-600 mt-0.5" />
              <span><strong>Random Audits:</strong> Mystery passenger quality checks</span>
            </div>
          </div>
        </CardContent>
      </Card>
    </section>

    <!-- Vehicle Safety Features -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6 flex items-center gap-2">
        <Car className="h-8 w-8 text-blue-600" />
        Electric Vehicle Safety Features
      </h2>

      <p class="text-lg text-muted-foreground mb-6">
        Modern electric vehicles are among the safest on the road. Here's why:
      </p>

      <div class="grid md:grid-cols-2 gap-6 mb-6">
        <Card>
          <CardHeader>
            <CardTitle className="text-lg">Kia Carens EV Safety Features</CardTitle>
            <CardDescription>6-seater premium safety</CardDescription>
          </CardHeader>
          <CardContent>
            <div class="space-y-3">
              <div class="bg-blue-50 dark:bg-blue-900/30 p-3 rounded-lg">
                <p class="font-semibold text-sm mb-2">⭐ 5-Star Safety Rating</p>
                <p class="text-xs text-muted-foreground">Global NCAP crash test certified</p>
              </div>
              <div class="space-y-2 text-sm">
                <div class="flex items-start gap-2">
                  <Check className="h-4 w-4 text-green-600 mt-0.5" />
                  <span><strong>6 Airbags:</strong> Driver, passenger, side, curtain protection</span>
                </div>
                <div class="flex items-start gap-2">
                  <Check className="h-4 w-4 text-green-600 mt-0.5" />
                  <span><strong>ABS with EBD:</strong> Anti-lock braking, electronic brake distribution</span>
                </div>
                <div class="flex items-start gap-2">
                  <Check className="h-4 w-4 text-green-600 mt-0.5" />
                  <span><strong>ESC:</strong> Electronic Stability Control prevents skidding</span>
                </div>
                <div class="flex items-start gap-2">
                  <Check className="h-4 w-4 text-green-600 mt-0.5" />
                  <span><strong>Hill Assist:</strong> Prevents rollback on slopes</span>
                </div>
                <div class="flex items-start gap-2">
                  <Check className="h-4 w-4 text-green-600 mt-0.5" />
                  <span><strong>TPMS:</strong> Tire Pressure Monitoring System</span>
                </div>
                <div class="flex items-start gap-2">
                  <Check className="h-4 w-4 text-green-600 mt-0.5" />
                  <span><strong>ISOFIX:</strong> Child seat anchors for family safety</span>
                </div>
              </div>
            </div>
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle className="text-lg">BYD eMAX 7 Safety Features</CardTitle>
            <CardDescription>7-seater premium safety</CardDescription>
          </CardHeader>
          <CardContent>
            <div class="space-y-3">
              <div class="bg-purple-50 p-3 rounded-lg">
                <p class="font-semibold text-sm mb-2">⭐ 5-Star Safety Rating</p>
                <p class="text-xs text-muted-foreground">European NCAP certified</p>
              </div>
              <div class="space-y-2 text-sm">
                <div class="flex items-start gap-2">
                  <Check className="h-4 w-4 text-green-600 mt-0.5" />
                  <span><strong>7 Airbags:</strong> Maximum occupant protection</span>
                </div>
                <div class="flex items-start gap-2">
                  <Check className="h-4 w-4 text-green-600 mt-0.5" />
                  <span><strong>Advanced ABS:</strong> With brake assist and EBD</span>
                </div>
                <div class="flex items-start gap-2">
                  <Check className="h-4 w-4 text-green-600 mt-0.5" />
                  <span><strong>ESP:</strong> Electronic Stability Program</span>
                </div>
                <div class="flex items-start gap-2">
                  <Check className="h-4 w-4 text-green-600 mt-0.5" />
                  <span><strong>Collision Warning:</strong> Forward collision prevention</span>
                </div>
                <div class="flex items-start gap-2">
                  <Check className="h-4 w-4 text-green-600 mt-0.5" />
                  <span><strong>Lane Assist:</strong> Lane departure warning system</span>
                </div>
                <div class="flex items-start gap-2">
                  <Check className="h-4 w-4 text-green-600 mt-0.5" />
                  <span><strong>Blind Spot:</strong> Monitor for safer lane changes</span>
                </div>
              </div>
            </div>
          </CardContent>
        </Card>
      </div>

      <Card className="border-orange-200 bg-orange-50 dark:bg-orange-900/30 mb-6">
        <CardContent className="pt-6">
          <h3 class="font-bold mb-4 flex items-center gap-2">
            <Zap className="h-5 w-5 text-orange-600" />
            Battery Safety - Addressing Common Concerns
          </h3>
          <div class="space-y-4">
            <div>
              <p class="font-semibold text-sm mb-2">Are EV batteries safe?</p>
              <p class="text-sm text-muted-foreground mb-2">
                Modern EV batteries are statistically safer than petrol/diesel vehicles. Here's why:
              </p>
              <div class="grid md:grid-cols-2 gap-3">
                <div class="flex items-start gap-2 text-sm">
                  <Check className="h-4 w-4 text-green-600 mt-0.5" />
                  <span><strong>Multiple Protection Layers:</strong> Fire-resistant casing, thermal barriers</span>
                </div>
                <div class="flex items-start gap-2 text-sm">
                  <Check className="h-4 w-4 text-green-600 mt-0.5" />
                  <span><strong>Battery Management System:</strong> 24/7 monitoring prevents overheating</span>
                </div>
                <div class="flex items-start gap-2 text-sm">
                  <Check className="h-4 w-4 text-green-600 mt-0.5" />
                  <span><strong>Crash Protection:</strong> Battery placed in reinforced floor compartment</span>
                </div>
                <div class="flex items-start gap-2 text-sm">
                  <Check className="h-4 w-4 text-green-600 mt-0.5" />
                  <span><strong>Auto Cutoff:</strong> Electrical systems disconnect in collision</span>
                </div>
              </div>
            </div>
            <div class="bg-white dark:bg-gray-800 p-4 rounded-lg">
              <p class="font-semibold text-sm mb-2">Our Safety Record:</p>
              <ul class="space-y-1 text-sm">
                <li class="flex items-center gap-2">
                  <Star className="h-4 w-4 text-yellow-500" />
                  <span>Zero fire incidents in 2,000+ trips</span>
                </li>
                <li class="flex items-center gap-2">
                  <Star className="h-4 w-4 text-yellow-500" />
                  <span>Zero battery-related breakdowns</span>
                </li>
                <li class="flex items-center gap-2">
                  <Star className="h-4 w-4 text-yellow-500" />
                  <span>Regular safety audits by certified technicians</span>
                </li>
              </ul>
            </div>
          </div>
        </CardContent>
      </Card>

      <Card>
        <CardHeader>
          <CardTitle>Why EVs are Safer Than Diesel/Petrol Vehicles</CardTitle>
        </CardHeader>
        <CardContent>
          <div class="grid md:grid-cols-3 gap-4">
            <div class="bg-green-50 dark:bg-green-900/30 p-4 rounded-lg">
              <p class="font-semibold mb-2 flex items-center gap-2">
                <ThumbsUp className="h-5 w-5 text-green-600" />
                Lower Fire Risk
              </p>
              <p class="text-xs text-muted-foreground">
                No flammable fuel tank. EVs catch fire 11x less than petrol vehicles (statistics from insurance data)
              </p>
            </div>
            <div class="bg-green-50 dark:bg-green-900/30 p-4 rounded-lg">
              <p class="font-semibold mb-2 flex items-center gap-2">
                <ThumbsUp className="h-5 w-5 text-green-600" />
                Better Stability
              </p>
              <p class="text-xs text-muted-foreground">
                Battery in floor = low center of gravity. Reduced rollover risk by 35%
              </p>
            </div>
            <div class="bg-green-50 dark:bg-green-900/30 p-4 rounded-lg">
              <p class="font-semibold mb-2 flex items-center gap-2">
                <ThumbsUp className="h-5 w-5 text-green-600" />
                Instant Response
              </p>
              <p class="text-xs text-muted-foreground">
                Electric braking responds 0.3 seconds faster than mechanical brakes
              </p>
            </div>
          </div>
        </CardContent>
      </Card>
    </section>

    <!-- Live Tracking & Monitoring -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6 flex items-center gap-2">
        <Navigation className="h-8 w-8 text-blue-600" />
        Live GPS Tracking & Trip Monitoring
      </h2>

      <Card className="mb-6">
        <CardHeader>
          <CardTitle>How Live Tracking Keeps You Safe</CardTitle>
          <CardDescription>Share your journey with family in real-time</CardDescription>
        </CardHeader>
        <CardContent>
          <div class="space-y-6">
            <div class="bg-blue-50 dark:bg-blue-900/30 p-5 rounded-lg">
              <h3 class="font-bold mb-3 flex items-center gap-2">
                <MapPin className="h-5 w-5 text-blue-600" />
                What You Get Before Your Trip
              </h3>
              <ul class="space-y-2 text-sm">
                <li class="flex items-start gap-2">
                  <Check className="h-4 w-4 text-green-600 mt-0.5" />
                  <span><strong>Live Tracking Link:</strong> Sent via WhatsApp 1 hour before pickup</span>
                </li>
                <li class="flex items-start gap-2">
                  <Check className="h-4 w-4 text-green-600 mt-0.5" />
                  <span><strong>Driver Details:</strong> Name, photo, phone number, vehicle details</span>
                </li>
                <li class="flex items-start gap-2">
                  <Check className="h-4 w-4 text-green-600 mt-0.5" />
                  <span><strong>Trip Details:</strong> Route, estimated time, distance</span>
                </li>
                <li class="flex items-start gap-2">
                  <Check className="h-4 w-4 text-green-600 mt-0.5" />
                  <span><strong>Share Option:</strong> Forward link to unlimited family members</span>
                </li>
              </ul>
            </div>

            <div>
              <h3 class="font-bold mb-3">Real-Time Tracking Features</h3>
              <div class="grid md:grid-cols-2 gap-4">
                <div class="bg-gray-50 dark:bg-gray-800 p-4 rounded-lg">
                  <p class="font-semibold text-sm mb-2 flex items-center gap-2">
                    <Eye className="h-4 w-4 text-blue-600" />
                    Live Location Updates
                  </p>
                  <p class="text-xs text-muted-foreground">
                    GPS updates every 10 seconds. See exact location on Google Maps
                  </p>
                </div>
                <div class="bg-gray-50 dark:bg-gray-800 p-4 rounded-lg">
                  <p class="font-semibold text-sm mb-2 flex items-center gap-2">
                    <Activity className="h-4 w-4 text-blue-600" />
                    Speed Monitoring
                  </p>
                  <p class="text-xs text-muted-foreground">
                    Current speed displayed. Alert if exceeding safe limits
                  </p>
                </div>
                <div class="bg-gray-50 dark:bg-gray-800 p-4 rounded-lg">
                  <p class="font-semibold text-sm mb-2 flex items-center gap-2">
                    <Navigation className="h-4 w-4 text-blue-600" />
                    Route Verification
                  </p>
                  <p class="text-xs text-muted-foreground">
                    Planned route vs actual route comparison. Alerts for deviations
                  </p>
                </div>
                <div class="bg-gray-50 dark:bg-gray-800 p-4 rounded-lg">
                  <p class="font-semibold text-sm mb-2 flex items-center gap-2">
                    <Bell className="h-4 w-4 text-blue-600" />
                    ETA Updates
                  </p>
                  <p class="text-xs text-muted-foreground">
                    Arrival time updates based on traffic. Milestone notifications
                  </p>
                </div>
              </div>
            </div>
          </div>
        </CardContent>
      </Card>

      <Card className="border-purple-200 bg-purple-50">
        <CardContent className="pt-6">
          <h3 class="font-bold mb-4 flex items-center gap-2">
            <Heart className="h-5 w-5 text-purple-600" />
            Family Peace of Mind Features
          </h3>
          <div class="grid md:grid-cols-2 gap-3 text-sm">
            <div class="flex items-start gap-2">
              <Check className="h-4 w-4 text-green-600 mt-0.5" />
              <span><strong>Trip Start Alert:</strong> Family gets notification when trip begins</span>
            </div>
            <div class="flex items-start gap-2">
              <Check className="h-4 w-4 text-green-600 mt-0.5" />
              <span><strong>Milestone Alerts:</strong> Notifications at key points (expressway entry, tolls, etc.)</span>
