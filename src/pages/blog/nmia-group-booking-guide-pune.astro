---
import MainLayout from "@/layouts/MainLayout.astro";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import StructuredData from "@/components/seo/StructuredData.astro";
import { generateBreadcrumbSchema } from "@/lib/seo";

const articleSchema = {
	"@context": "https://schema.org",
	"@type": "Article",
	"headline": "Group Cab Booking Pune to NMIA: Complete Guide for 3-6 Travelers",
	"description": "Complete guide for group cab bookings from Pune to Navi Mumbai Airport. Covers cost sharing strategies, vehicle capacity, coordination tips, corporate group travel, and family vacation logistics.",
	"datePublished": "2025-12-26",
	"dateModified": "2025-12-26",
	"author": {
		"@type": "Organization",
		"name": "GreenEVCabs"
	},
	"publisher": {
		"@type": "Organization",
		"name": "GreenEVCabs"
	}
};

const breadcrumbSchema = generateBreadcrumbSchema([
	{ name: "Blog", url: "/blog" },
	{ name: "Group Cab Booking NMIA Guide", url: "/blog/nmia-group-booking-guide-pune" }
]);
---

<MainLayout
	title="Group Cab Booking Pune to NMIA: Complete Guide for 3-6 Travelers | GreenEVCabs"
	description="Complete guide for group cab bookings from Pune to Navi Mumbai Airport. Covers cost sharing strategies, vehicle capacity, coordination tips, corporate group travel, and family vacation logistics for 3-6 travelers."
	keywords={[
		"group cab pune to navi mumbai airport",
		"shared cab nmia",
		"pune to nmia group booking",
		"6 seater cab nmia",
		"family cab to navi mumbai airport",
		"corporate cab nmia pune",
		"friends cab booking nmia",
		"shared taxi pune to nmia",
		"group travel navi mumbai airport",
		"cost sharing cab nmia"
	]}
>
	<StructuredData data={[articleSchema, breadcrumbSchema]} />

	<article class="py-16">
		<div class="container mx-auto px-4 max-w-4xl">
			<!-- Header -->
			<div class="mb-8">
				<Badge variant="secondary" class="mb-4">Group Travel</Badge>
				<h1 class="text-4xl md:text-5xl font-bold mb-4">
					Group Cab Booking: Pune to Navi Mumbai Airport Complete Guide
				</h1>
				<p class="text-xl text-muted-foreground">
					Everything you need to know about booking cabs for groups of 3-6 travelers from Pune to NMIA. Covers cost sharing, coordination, vehicle capacity, and special scenarios for families, colleagues, and friends.
				</p>
			</div>

			<!-- Quick Answer -->
			<div class="not-prose my-8">
				<Card class="bg-green-50 dark:bg-green-900/30">
					<CardContent class="pt-6">
						<p class="font-bold mb-3">Quick Answer: Group Cab Economics</p>
						<div class="space-y-3 text-sm">
							<div class="bg-white dark:bg-gray-800 p-3 rounded">
								<p class="font-semibold mb-2">Single Cab: ₹2,300 for up to 6 passengers</p>
								<table class="w-full text-xs">
									<thead>
										<tr class="border-b">
											<th class="text-left py-1">Group Size</th>
											<th class="text-left py-1">Cost Per Person</th>
											<th class="text-left py-1">vs Individual Uber/Ola</th>
										</tr>
									</thead>
									<tbody>
										<tr class="border-b">
											<td class="py-1">3 people</td>
											<td class="py-1 font-semibold text-green-600">₹1,233 each</td>
											<td class="py-1">Save ₹2,767/person</td>
										</tr>
										<tr class="border-b">
											<td class="py-1">4 people</td>
											<td class="py-1 font-semibold text-green-600">₹925 each</td>
											<td class="py-1">Save ₹3,075/person</td>
										</tr>
										<tr class="border-b">
											<td class="py-1">5 people</td>
											<td class="py-1 font-semibold text-green-600">₹740 each</td>
											<td class="py-1">Save ₹3,260/person</td>
										</tr>
										<tr class="bg-green-100 font-semibold">
											<td class="py-1">6 people</td>
											<td class="py-1 text-green-700 dark:text-green-400">₹617 each</td>
											<td class="py-1">Save ₹3,383/person</td>
										</tr>
									</tbody>
								</table>
							</div>
							<p><strong>WhatsApp Booking:</strong> <a href="https://wa.me/919145499009?text=I%20need%20a%20group%20cab%20from%20Pune%20to%20NMIA" class="text-green-600 font-semibold">+91 91454 99009</a></p>
						</div>
						<div class="mt-4">
							<Button asChild class="w-full sm:w-auto">
								<a href="https://wa.me/919145499009?text=I%20need%20a%20group%20cab%20from%20Pune%20to%20NMIA">Book Group Cab via WhatsApp</a>
							</Button>
						</div>
					</CardContent>
				</Card>
			</div>

			<!-- Table of Contents -->
			<div class="not-prose my-8">
				<Card>
					<CardHeader>
						<CardTitle>Complete Guide Contents</CardTitle>
					</CardHeader>
					<CardContent>
						<ul class="space-y-2 text-sm">
							<li><a href="#cost-breakdown" class="text-green-600 hover:underline">1. Cost Breakdown & Savings Analysis</a></li>
							<li><a href="#vehicle-capacity" class="text-green-600 hover:underline">2. Vehicle Capacity & Luggage Planning</a></li>
							<li><a href="#coordination" class="text-green-600 hover:underline">3. Group Coordination Strategies</a></li>
							<li><a href="#scenarios" class="text-green-600 hover:underline">4. Common Group Travel Scenarios</a></li>
							<li><a href="#payment" class="text-green-600 hover:underline">5. Payment & Cost Sharing Methods</a></li>
							<li><a href="#pickup-strategy" class="text-green-600 hover:underline">6. Multi-Location Pickup Strategy</a></li>
							<li><a href="#booking-process" class="text-green-600 hover:underline">7. Booking Process for Groups</a></li>
						</ul>
					</CardContent>
				</Card>
			</div>

			<!-- Section 1: Cost Breakdown -->
			<section id="cost-breakdown" class="mb-12">
				<h2 class="text-3xl font-bold mb-6">Cost Breakdown & Savings Analysis</h2>

				<h3 class="text-2xl font-semibold mt-8 mb-4">Why Group Cab Booking is Financially Smart</h3>

				<p class="mb-4">
					Individual Uber/Ola from Pune to NMIA costs ₹4,000-4,500 per person (if they even accept the long trip). A single GreenEVCabs vehicle costs ₹2,300 for up to 6 people.
				</p>

				<div class="not-prose my-6">
					<Card>
						<CardContent class="pt-6">
							<p class="font-bold mb-3">Detailed Savings Comparison:</p>
							<table class="w-full text-sm">
								<thead>
									<tr class="border-b bg-gray-50 dark:bg-gray-800">
										<th class="text-left py-2 px-2">Scenario</th>
										<th class="text-left py-2 px-2">Individual Cabs Cost</th>
										<th class="text-left py-2 px-2">Shared Cab Cost</th>
										<th class="text-left py-2 px-2">Total Savings</th>
										<th class="text-left py-2 px-2">Per Person</th>
									</tr>
								</thead>
								<tbody>
									<tr class="border-b">
										<td class="py-2 px-2"><strong>3 Colleagues</strong></td>
										<td class="py-2 px-2">3 × ₹4,000 = ₹12,000</td>
										<td class="py-2 px-2 bg-green-50 dark:bg-green-900/30">₹2,300</td>
										<td class="py-2 px-2 font-semibold text-green-600">₹8,300</td>
										<td class="py-2 px-2">₹1,233/person</td>
									</tr>
									<tr class="border-b">
										<td class="py-2 px-2"><strong>4 Friends</strong></td>
										<td class="py-2 px-2">4 × ₹4,000 = ₹16,000</td>
										<td class="py-2 px-2 bg-green-50 dark:bg-green-900/30">₹2,300</td>
										<td class="py-2 px-2 font-semibold text-green-600">₹12,300</td>
										<td class="py-2 px-2">₹925/person</td>
									</tr>
									<tr class="border-b">
										<td class="py-2 px-2"><strong>Family of 5</strong></td>
										<td class="py-2 px-2">2 cabs needed = ₹8,000</td>
										<td class="py-2 px-2 bg-green-50 dark:bg-green-900/30">₹2,300</td>
										<td class="py-2 px-2 font-semibold text-green-600">₹4,300</td>
										<td class="py-2 px-2">₹740/person</td>
									</tr>
									<tr class="bg-green-100 font-semibold">
										<td class="py-2 px-2"><strong>6 Travelers (Max)</strong></td>
										<td class="py-2 px-2">2 cabs = ₹8,000+</td>
										<td class="py-2 px-2">₹2,300</td>
										<td class="py-2 px-2 text-green-700 dark:text-green-400">₹4,300+</td>
										<td class="py-2 px-2">₹617/person</td>
									</tr>
								</tbody>
							</table>
							<p class="text-xs mt-3 text-muted-foreground">Individual cab costs based on typical Uber/Ola pricing for 100-140 km Pune-NMIA route</p>
						</CardContent>
					</Card>
				</div>

				<h3 class="text-2xl font-semibold mt-8 mb-4">Monthly / Recurring Group Travel Savings</h3>

				<div class="not-prose my-6">
					<Card class="bg-blue-50 dark:bg-blue-900/30">
						<CardContent class="pt-6">
							<p class="font-bold mb-3">Real Scenario: 3 Bengaluru Commuters (Same Company)</p>
							<div class="space-y-2 text-sm">
								<p><strong>Situation:</strong> 3 colleagues at TCS Hinjewadi travel to Bengaluru office every Monday, return every Friday</p>
								<p><strong>If traveling separately:</strong></p>
								<ul class="ml-4 space-y-1">
									<li>• Each person: ₹4,000 (one way) = ₹8,000/week (both ways)</li>
									<li>• 3 people: ₹24,000/week total</li>
									<li>• Monthly (4 weeks): ₹96,000</li>
								</ul>
								<p><strong>If sharing GreenEVCabs:</strong></p>
								<ul class="ml-4 space-y-1">
									<li>• ₹2,300 per trip (both ways: ₹7,400/week)</li>
									<li>• Split 3 ways: ₹2,467/person/week</li>
									<li>• Monthly (4 weeks): ₹29,600 total</li>
								</ul>
								<p class="font-bold text-green-700 dark:text-green-400 mt-3">Monthly Savings: ₹96,000 - ₹29,600 = ₹66,400 saved!</p>
								<p class="text-xs mt-2">That's ₹7,96,800 saved per year by coordinating travel!</p>
							</div>
						</CardContent>
					</Card>
				</div>
			</section>

			<!-- Section 2: Vehicle Capacity -->
			<section id="vehicle-capacity" class="mb-12">
				<h2 class="text-3xl font-bold mb-6">Vehicle Capacity & Luggage Planning</h2>

				<h3 class="text-2xl font-semibold mt-8 mb-4">Understanding 6-Seater Configuration</h3>

				<div class="not-prose my-6">
					<Card>
						<CardContent class="pt-6">
							<div class="grid md:grid-cols-2 gap-6">
								<div>
									<p class="font-bold mb-3">KIA Carens (Standard)</p>
									<ul class="text-sm space-y-2">
										<li><strong>Seating:</strong> 6 passengers (2+2+2 configuration)</li>
										<li><strong>Row 1 (Front):</strong> Driver + 1 passenger</li>
										<li><strong>Row 2 (Middle):</strong> 2 passengers (captain seats)</li>
										<li><strong>Row 3 (Rear):</strong> 2 passengers</li>
										<li><strong>Boot Space:</strong> Large (4-5 check-in bags)</li>
										<li><strong>Foldable Row:</strong> 3rd row folds = massive luggage space</li>
									</ul>
								</div>
								<div>
									<p class="font-bold mb-3">BYD eMax 7 (Premium)</p>
									<ul class="text-sm space-y-2">
										<li><strong>Seating:</strong> 6 passengers (2+2+2 configuration)</li>
										<li><strong>Row 1 (Front):</strong> Driver + 1 passenger</li>
										<li><strong>Row 2 (Middle):</strong> 2 passengers (premium captain seats)</li>
										<li><strong>Row 3 (Rear):</strong> 2 passengers</li>
										<li><strong>Boot Space:</strong> Extra large (5-6 check-in bags)</li>
										<li><strong>Luxury:</strong> More legroom, better comfort for groups</li>
									</ul>
								</div>
							</div>
						</CardContent>
					</Card>
				</div>

				<h3 class="text-2xl font-semibold mt-8 mb-4">Group Size vs Luggage Trade-offs</h3>

				<div class="not-prose my-6">
					<Card>
						<CardContent class="pt-6">
							<p class="font-bold mb-3">Capacity Planning Matrix:</p>
							<table class="w-full text-sm">
								<thead>
									<tr class="border-b bg-gray-50 dark:bg-gray-800">
										<th class="text-left py-2 px-2">Passengers</th>
										<th class="text-left py-2 px-2">Check-In Bags</th>
										<th class="text-left py-2 px-2">Cabin Bags</th>
										<th class="text-left py-2 px-2">Configuration</th>
										<th class="text-left py-2 px-2">Comfort Level</th>
									</tr>
								</thead>
								<tbody>
									<tr class="border-b bg-green-50 dark:bg-green-900/30">
										<td class="py-2 px-2"><strong>3 people</strong></td>
										<td class="py-2 px-2">6 bags</td>
										<td class="py-2 px-2">3 bags</td>
										<td class="py-2 px-2">All in Row 2, fold Row 3</td>
										<td class="py-2 px-2">Excellent (lots of space)</td>
									</tr>
									<tr class="border-b bg-green-50 dark:bg-green-900/30">
										<td class="py-2 px-2"><strong>4 people</strong></td>
										<td class="py-2 px-2">5 bags</td>
										<td class="py-2 px-2">4 bags</td>
										<td class="py-2 px-2">2 in Row 2, 2 in Row 3</td>
										<td class="py-2 px-2">Very Good (spacious)</td>
									</tr>
									<tr class="border-b bg-yellow-50 dark:bg-yellow-900/30">
										<td class="py-2 px-2"><strong>5 people</strong></td>
										<td class="py-2 px-2">4 bags</td>
										<td class="py-2 px-2">5 bags</td>
										<td class="py-2 px-2">1+2+2 seating</td>
										<td class="py-2 px-2">Good (reasonable space)</td>
									</tr>
									<tr class="border-b bg-orange-50 dark:bg-orange-900/30 dark:bg-orange-900/30">
										<td class="py-2 px-2"><strong>6 people</strong></td>
										<td class="py-2 px-2">2-3 bags</td>
										<td class="py-2 px-2">6 bags</td>
										<td class="py-2 px-2">All seats occupied</td>
										<td class="py-2 px-2">Cozy (limited luggage)</td>
									</tr>
								</tbody>
							</table>
							<p class="text-xs mt-3 text-muted-foreground">Check-in bags = 23kg suitcases. Cabin bags = backpacks/small bags.</p>
						</CardContent>
					</Card>
				</div>

				<div class="not-prose my-6">
					<Card class="bg-yellow-50 dark:bg-yellow-900/30">
						<CardContent class="pt-6">
							<p class="font-bold mb-2">Important: Communicating Luggage Needs</p>
							<p class="text-sm mb-3">When booking for 5-6 people, <strong>always mention luggage quantity</strong> in your WhatsApp message:</p>
							<div class="bg-white dark:bg-gray-800 p-3 rounded text-sm">
								<p class="font-semibold mb-2">Good Examples:</p>
								<p class="italic mb-1">✓ "6 people, only cabin bags (weekend trip)"</p>
								<p class="italic mb-1">✓ "5 people, 3 large bags + 5 cabin bags (Bengaluru trip)"</p>
								<p class="italic mb-1">✓ "4 people, 6 large bags (family vacation with lots of luggage)"</p>
								<p class="font-semibold mt-3 mb-2">Why This Matters:</p>
								<p>We can allocate BYD eMax 7 (larger vehicle) if you have heavy luggage needs, ensuring comfortable journey for everyone.</p>
							</div>
						</CardContent>
					</Card>
				</div>
			</section>

			<!-- Section 3: Coordination -->
			<section id="coordination" class="mb-12">
				<h2 class="text-3xl font-bold mb-6">Group Coordination Strategies</h2>

				<p class="mb-4">
					Coordinating group travel requires planning. Here are proven strategies for smooth group cab experiences:
				</p>

				<h3 class="text-2xl font-semibold mt-8 mb-4">Pre-Travel Coordination Checklist</h3>

				<div class="not-prose my-6">
					<Card>
						<CardContent class="pt-6">
							<div class="space-y-4 text-sm">
								<div class="border-l-4 border-l-green-500 pl-4">
									<p class="font-semibold mb-2">1. Confirm Flight Details (All Travelers)</p>
									<ul class="space-y-1 text-muted-foreground">
										<li>✓ Everyone on same flight? (Ideal scenario)</li>
										<li>✓ Flights within 1-hour window? (Manageable)</li>
										<li>✓ Flights 2+ hours apart? (Consider separate bookings)</li>
									</ul>
								</div>

								<div class="border-l-4 border-l-blue-500 pl-4">
									<p class="font-semibold mb-2">2. Decide Single Pickup or Multi-Pickup</p>
									<ul class="space-y-1 text-muted-foreground">
										<li>✓ <strong>Option A:</strong> Everyone meets at one location (faster)</li>
										<li>✓ <strong>Option B:</strong> Pick up from multiple locations (add 15-30 min)</li>
										<li>✓ Rule: Max 2 pickup locations for efficiency</li>
									</ul>
								</div>

								<div class="border-l-4 border-l-purple-500 pl-4">
									<p class="font-semibold mb-2">3. Assign a "Group Coordinator"</p>
									<ul class="space-y-1 text-muted-foreground">
										<li>✓ One person handles booking via WhatsApp</li>
										<li>✓ Coordinator has everyone's contact numbers</li>
										<li>✓ Coordinator communicates with driver for entire group</li>
										<li>✓ Reduces confusion, single point of contact</li>
									</ul>
								</div>

								<div class="border-l-4 border-l-orange-500 pl-4">
									<p class="font-semibold mb-2">4. Agree on Payment Method Upfront</p>
									<ul class="space-y-1 text-muted-foreground">
										<li>✓ Will one person pay, others reimburse?</li>
										<li>✓ Or split payment at end of journey?</li>
										<li>✓ Set expectation before travel (avoids awkwardness)</li>
									</ul>
								</div>

								<div class="border-l-4 border-l-red-500 pl-4">
									<p class="font-semibold mb-2">5. Share Timeline with All Travelers</p>
									<ul class="space-y-1 text-muted-foreground">
										<li>✓ "Cab picks up from Hinjewadi at 4 AM"</li>
										<li>✓ "Then Wakad at 4:15 AM"</li>
										<li>✓ "Reach NMIA by 6:15 AM for 7:00 AM flight"</li>
										<li>✓ Everyone knows their exact pickup time</li>
									</ul>
								</div>
							</div>
						</CardContent>
					</Card>
				</div>

				<h3 class="text-2xl font-semibold mt-8 mb-4">Communication Flow</h3>

				<div class="not-prose my-6">
					<Card class="bg-blue-50 dark:bg-blue-900/30">
						<CardContent class="pt-6">
							<p class="font-bold mb-3">Recommended: Create WhatsApp Group for Trip</p>
							<ol class="text-sm space-y-2">
								<li><strong>1. Create Group:</strong> "NMIA Trip - [Date]" with all travelers</li>
								<li><strong>2. Share Booking Confirmation:</strong> Forward our confirmation message to group</li>
								<li><strong>3. Driver Details:</strong> Add driver to WhatsApp group once assigned (optional)</li>
								<li><strong>4. Day Before:</strong> Coordinator confirms pickup time with everyone</li>
								<li><strong>5. Travel Day:</strong> Real-time updates ("Driver 5 min away", "Picked up Person 1")</li>
								<li><strong>6. At Airport:</strong> Share gate/terminal info with group</li>
							</ol>
							<p class="text-xs mt-3 text-muted-foreground">This eliminates 95% of coordination issues and missed communications.</p>
						</CardContent>
					</Card>
				</div>
			</section>

			<!-- Section 4: Common Scenarios -->
			<section id="scenarios" class="mb-12">
				<h2 class="text-3xl font-bold mb-6">Common Group Travel Scenarios</h2>

				<h3 class="text-2xl font-semibold mt-8 mb-4">Scenario 1: Corporate Colleagues (Same Flight)</h3>

				<div class="not-prose my-6">
					<Card>
						<CardContent class="pt-6">
							<p class="font-semibold mb-3">Example: 4 colleagues at Infosys Hinjewadi going to Bengaluru office</p>
							<div class="text-sm space-y-3">
								<div>
									<p class="font-bold mb-1">Details:</p>
									<ul class="ml-4 space-y-1">
										<li>• All 4 on same 7 AM NMIA-BLR flight</li>
										<li>• All live in Hinjewadi (within 2 km radius)</li>
										<li>• Light luggage (1 cabin bag each)</li>
									</ul>
								</div>
								<div>
									<p class="font-bold mb-1">Optimal Plan:</p>
									<ul class="ml-4 space-y-1">
										<li>• Pick single meeting point: Infosys main gate</li>
										<li>• Pickup time: 4:30 AM (2.5 hours before flight)</li>
										<li>• All reach gate by 4:25 AM, cab loads everyone in 5 minutes</li>
										<li>• Reach NMIA by 6:30 AM (30 min buffer)</li>
										<li>• Cost: ₹925/person (₹2,300 ÷ 4)</li>
									</ul>
								</div>
								<div class="bg-green-50 dark:bg-green-900/30 p-3 rounded">
									<p class="font-bold text-green-700 dark:text-green-400 mb-1">Why This Works:</p>
									<p>Single pickup = no coordination hassle, everyone knows one location, smooth start to journey</p>
								</div>
							</div>
						</CardContent>
					</Card>
				</div>

				<h3 class="text-2xl font-semibold mt-8 mb-4">Scenario 2: Family Vacation (Different Ages)</h3>

				<div class="not-prose my-6">
					<Card>
						<CardContent class="pt-6">
							<p class="font-semibold mb-3">Example: Family of 5 (2 adults, 2 kids, 1 elderly grandparent)</p>
							<div class="text-sm space-y-3">
								<div>
