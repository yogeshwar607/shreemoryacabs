const publishDate = "2025-01-15";
const author = "GreenEVCabs Team";

const keywords = [
  "ev charging pune mumbai",
  "electric car charging stations expressway",
  "pune mumbai ev charging",
  "tata power charging stations",
  "ev charging cost pune mumbai",
  "electric vehicle charging infrastructure",
  "ccs2 charging pune mumbai",
  "fast charging stations expressway"
];

const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "author": {
    "@type": "Organization",
    "name": author
  },
  "datePublished": publishDate,
  "dateModified": publishDate
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Can my electric car make it from Pune to Mumbai on one charge?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, most modern EVs can complete the 130 km journey on a single charge. Vehicles with 200+ km range (like Tata Nexon EV, MG ZS EV, BYD E-MAX 7) can easily make the trip starting with 80-90 percent charge."
      }
    },
    {
      "@type": "Question",
      "name": "How many EV charging stations are there between Pune and Mumbai?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "There are 15+ EV charging stations along the Pune-Mumbai corridor, with 6+ major stations directly on the expressway at Talegaon, Lonavala, Khopoli, Khalapur, Panvel, and Navi Mumbai."
      }
    },
    {
      "@type": "Question",
      "name": "How much does it cost to charge an EV on the expressway?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "EV charging costs Rs.15-22 per kWh at expressway stations. A full charge for a 40 kWh battery costs Rs.600-880. Most EV cab trips only need partial charging, costing Rs.200-400."
      }
    },
    {
      "@type": "Question",
      "name": "Which charging network is best for Pune-Mumbai travel?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Tata Power EZ Charge has the best coverage with stations at all major stops. ChargeZone and Statiq also have good presence. Install multiple apps for backup options."
      }
    }
  ]
};
