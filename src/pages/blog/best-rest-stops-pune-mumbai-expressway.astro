---
import MainLayout from "@/layouts/MainLayout.astro";
import { Card } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import ReviewWidget from "@/components/ReviewWidget.astro";
import { Check, X, MapPin, IndianRupee, Clock, Coffee, Utensils, Car, Zap, Shield, TrendingUp, ChevronRight, Star, Users, Calendar, MessageCircle, Phone, Fuel } from "lucide-react";

const title = "10 Best Rest Stops on Pune-Mumbai Expressway You Must Know (2025 Guide)";
const description = "Complete guide to the best rest stops, food joints, and facilities on Mumbai-Pune Expressway. From McDonald's to local dhabas, EV charging to clean restrooms - everything travelers need to know.";
const publishDate = "2025-01-15";
const author = "GreenEVCabs Team";

const keywords = [
  "pune mumbai expressway rest stops",
  "best food stops expressway",
  "lonavala food stops",
  "mumbai pune expressway restaurants",
  "expressway dhaba",
  "where to stop pune mumbai expressway",
  "clean restrooms expressway",
  "ev charging expressway"
];

const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "author": {
    "@type": "Organization",
    "name": author
  },
  "datePublished": publishDate,
  "dateModified": publishDate
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "What is the best food stop on Pune-Mumbai Expressway?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "McDonald's at Lonavala (Km 40) is consistently rated the best with cleanest restrooms, fast service, EV charging, and good food. Khalapur Food Plaza (Km 68) offers the most variety with 10+ restaurants."
      }
    },
    {
      "@type": "Question",
      "name": "Where can I find clean restrooms on the expressway?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "McDonald's locations at Lonavala (Km 40) and Khopoli (Km 55) have the cleanest restrooms. Khalapur Food Plaza also maintains good facilities. Most charge Rs.5-10 for usage."
      }
    },
    {
      "@type": "Question",
      "name": "Are there EV charging stations at rest stops?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, EV charging is available at Talegaon (Km 12), Lonavala McDonald's (Km 40), Khopoli McDonald's (Km 55), and Khalapur Food Plaza (Km 68). Most are CCS2 type with 25-60 kW power."
      }
    },
    {
      "@type": "Question",
      "name": "How long should I plan for a rest stop?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Plan 15-20 minutes for a quick coffee/restroom break, 30-40 minutes for a full meal. Fast food joints like McDonald's are quicker than sit-down restaurants."
      }
    }
  ]
};
---

<MainLayout
  title={title}
  description={description}
  keywords={keywords}
  ogType="article"
>
  <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <div class="container mx-auto px-4 py-8 max-w-5xl">

    <!-- Quick Answer Box -->
    <Card className="p-6 mb-8 bg-gradient-to-r from-amber-50 to-orange-50 border-amber-200">
