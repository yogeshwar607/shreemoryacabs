        <div class="bg-amber-600 text-white p-3 rounded-lg">
          <Coffee className="h-6 w-6" />
        </div>
        <div class="flex-1">
          <h2 class="text-xl font-bold text-gray-900 mb-2">Top 3 Must-Stop Locations</h2>
          <div class="space-y-2 text-sm">
