const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": pageTitle,
  "description": pageDescription,
  "author": {
    "@type": "Organization",
    "name": "Shree Morya Cabs"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Shree Morya Cabs",
    "logo": {
      "@type": "ImageObject",
      "url": "https://shreemoryacabs.com/logo.png"
    }
  },
  "datePublished": "2025-01-15",
  "dateModified": "2025-01-15",
  "image": "https://shreemoryacabs.com/og-image.jpg",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://shreemoryacabs.com/blog/5-seater-vs-7-seater-electric-cab-guide"
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Should I book 5-seater or 7-seater cab for 4 passengers?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "For 4 passengers with normal luggage, a 5-seater is sufficient and costs less (‚Çπ18/km vs ‚Çπ22/km). However, if you have heavy luggage (3+ large suitcases), airport-bound, or want extra comfort, upgrade to 7-seater. The third row stays folded, giving massive boot space."
      }
    },
    {
      "@type": "Question",
      "name": "What is the cost difference between 5-seater and 7-seater EV cabs?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "5-seater (Kia Carens EV): ‚Çπ18/km. 7-seater (BYD E-MAX 7): ‚Çπ22/km. For Pune-Mumbai Airport (150 km), difference is ‚Çπ600 per trip. 7-seater includes premium features like panoramic sunroof, ADAS, and more space, justifying the ‚Çπ4/km premium."
      }
    },
    {
      "@type": "Question",
      "name": "Can 6-7 seater cab fit 7 adults comfortably?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "BYD E-MAX 7: Yes, comfortably fits 7 adults with good legroom in all rows. Kia Carens EV: Fits 6 adults very comfortably (captain seats), or 7 adults adequately (bench config). For journeys over 2 hours with 7 people, BYD is more comfortable due to spacious third row."
      }
    },
    {
      "@type": "Question",
      "name": "Which is better for families - 5-seater or 7-seater?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Family of 4-5: 5-seater is perfect and economical. Family of 6: Either works; 7-seater gives extra space. Family of 7+: Must book 7-seater. Multi-generational travel (grandparents, parents, kids): 7-seater recommended for comfort. Weekend trips with lots of luggage: 7-seater (third row folded = huge boot)."
      }
    },
    {
      "@type": "Question",
      "name": "Does 7-seater cab have enough luggage space?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "With all 7 seats occupied: 180-235L boot (fits 2-3 medium suitcases). With third row folded (5 passengers): 580-650L (fits 5-6 large suitcases easily). 7-seaters are excellent for airport trips with families - just fold third row and you have more luggage space than any 5-seater."
      }
    },
    {
      "@type": "Question",
      "name": "Are 7-seater EVs less efficient than 5-seaters?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Slightly, but negligible. 7-seaters are heavier (100-150 kg more) which reduces efficiency by 3-5%. BYD E-MAX 7 actually has better range (530 km) than Kia Carens EV (452 km) due to larger 71.8 kWh battery. For Pune-Mumbai, both arrive with 60%+ battery remaining, so efficiency difference doesn't matter."
      }
    },
    {
      "@type": "Question",
      "name": "Can I fold the third row in 7-seater cabs?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes! Both Kia Carens EV and BYD E-MAX 7 have foldable third rows. When folded, you get massive cargo space (580-650L) while still seating 5 passengers comfortably. Perfect for airport trips, shopping, or weekend getaways. Third row folds in seconds - very convenient."
      }
    },
    {
      "@type": "Question",
      "name": "Which cab is better for corporate group travel?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "For 3-4 residents: 5-seater (more economical, adequate space, professional look). For 5-6 residents: 7-seater with third row folded (extra comfort, laptop space). For airport drops with luggage: 7-seater (better boot space). For regular office commute: 5-seater (better cost per person)."
      }
    }
  ]
