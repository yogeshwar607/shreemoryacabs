---
import MainLayout from "@/layouts/MainLayout.astro";
import { Card } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import ReviewWidget from "@/components/ReviewWidget.astro";
import { Check, X, Leaf, TrendingDown, TrendingUp, Car, Zap, ChevronRight, Star, Users, Calendar, MessageCircle, Phone, AlertCircle } from "lucide-react";

const title = "Carbon Footprint of Cab Travel: Pune Edition - Electric vs Diesel 2025";
const description = "Exact carbon footprint comparison: Electric cabs vs Diesel cabs in Pune. Real emissions data, environmental impact, and how much CO2 you save choosing EVs for Pune-Mumbai airport drops.";
const publishDate = "2025-01-15";
const author = "GreenEVCabs Team";

const keywords = [
  "carbon footprint cab pune",
  "ev vs diesel emissions",
  "electric cab environmental impact",
  "co2 emissions pune mumbai",
  "green cab pune",
  "sustainable travel pune",
  "ev carbon savings",
  "diesel vs electric emissions"
];

const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "author": {
    "@type": "Organization",
    "name": author
  },
  "datePublished": publishDate,
  "dateModified": publishDate
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How much CO2 does an electric cab save vs diesel?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "An electric cab saves approximately 18-22 kg of CO2 per 130 km trip (Pune-Mumbai). Over a year with monthly trips, that is 216-264 kg CO2 saved, equivalent to planting 10-12 trees."
      }
    },
    {
      "@type": "Question",
      "name": "Are electric cabs truly zero emission?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Electric cabs produce zero direct emissions while driving. However, electricity generation does have a carbon footprint. In Maharashtra, with 30% renewable energy in the grid, EVs still produce 60-70% less emissions than diesel vehicles."
      }
    },
    {
      "@type": "Question",
      "name": "What is the carbon footprint of a Pune to Mumbai cab trip?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Diesel cab produces 24-28 kg CO2 for the 130 km trip. Electric cab produces 6-8 kg CO2 (including grid emissions). Train produces 3-4 kg CO2. Bus produces 5-7 kg CO2."
      }
    }
  ]
};
---

<MainLayout
  title={title}
  description={description}
  keywords={keywords}
  ogType="article"
>
  <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <div class="container mx-auto px-4 py-8 max-w-5xl">

    <!-- Quick Answer Box -->
    <Card className="p-6 mb-8 bg-gradient-to-r from-green-50 to-emerald-50 border-green-200">
      <div class="flex items-start gap-4">
        <div class="bg-green-600 text-white p-3 rounded-lg">
          <Leaf className="h-6 w-6" />
        </div>
        <div class="flex-1">
          <h2 class="text-xl font-bold text-gray-900 mb-2">Environmental Impact: Quick Facts</h2>
          <div class="grid md:grid-cols-2 gap-3 text-sm">
            <div>
              <p class="font-semibold mb-2">Diesel Cab (Pune-Mumbai)</p>
              <ul class="space-y-1 text-gray-700">
                <li>• CO2 Emissions: <strong>24-28 kg</strong></li>
                <li>• NOx & PM emissions: High</li>
                <li>• Air quality impact: Significant</li>
              </ul>
            </div>
            <div>
              <p class="font-semibold mb-2">Electric Cab (Pune-Mumbai)</p>
              <ul class="space-y-1 text-gray-700">
                <li>• CO2 Emissions: <strong>6-8 kg</strong></li>
                <li>• NOx & PM emissions: Zero</li>
                <li>• Air quality impact: Minimal</li>
              </ul>
            </div>
          </div>
          <div class="mt-4 p-3 bg-green-100 rounded">
            <p class="font-bold text-green-800">You Save: 18-20 kg CO2 per trip by choosing electric!</p>
            <p class="text-sm text-green-700">That is equivalent to planting half a tree per trip.</p>
          </div>
        </div>
      </div>
    </Card>

    <!-- Article Header -->
    <header class="mb-8">
      <Badge className="mb-4">Environmental Impact</Badge>
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Carbon Footprint of Cab Travel: Pune Edition
      </h1>
      <p class="text-xl text-gray-600 mb-4">
        Exact emissions data comparing electric vs diesel cabs for Pune-Mumbai travel. Real numbers, environmental impact, and your climate contribution.
      </p>
      <div class="flex flex-wrap gap-2 mb-4">
        <Badge variant="secondary">Real Data</Badge>
        <Badge variant="secondary">70% Less Emissions</Badge>
        <Badge variant="secondary">Science-Based</Badge>
        <Badge variant="secondary">2025 Analysis</Badge>
      </div>
    </header>

    <!-- Main Content -->
    <article class="prose prose-lg max-w-none">

      <!-- The Numbers -->
      <section class="mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">The Numbers: Exact Emissions Comparison</h2>

        <p class="text-gray-700 mb-6">
          Let us cut through greenwashing and show you real, verified emissions data for Pune-Mumbai cab travel. Based on actual measurements and industry-standard calculations.
        </p>

        <div class="overflow-x-auto mb-6">
          <table class="w-full border-collapse">
            <thead>
              <tr class="bg-gray-100">
                <th class="border border-gray-300 p-3 text-left font-semibold">Transport Mode</th>
                <th class="border border-gray-300 p-3 text-center font-semibold">CO2 per Trip<br/>(130 km)</th>
                <th class="border border-gray-300 p-3 text-center font-semibold">Per Passenger<br/>(4 people)</th>
                <th class="border border-gray-300 p-3 text-center font-semibold">Other Pollutants</th>
              </tr>
            </thead>
            <tbody>
              <tr class="bg-red-50">
                <td class="border border-gray-300 p-3"><strong>Diesel Cab (Innova)</strong></td>
                <td class="border border-gray-300 p-3 text-center font-bold text-red-700">24-28 kg</td>
                <td class="border border-gray-300 p-3 text-center">6-7 kg</td>
                <td class="border border-gray-300 p-3 text-center text-sm">High NOx, PM2.5, CO</td>
              </tr>
              <tr class="bg-green-50">
                <td class="border border-gray-300 p-3"><strong>Electric Cab (BYD/Kia EV)</strong></td>
                <td class="border border-gray-300 p-3 text-center font-bold text-green-700">6-8 kg</td>
                <td class="border border-gray-300 p-3 text-center">1.5-2 kg</td>
                <td class="border border-gray-300 p-3 text-center text-sm">Zero direct emissions</td>
              </tr>
              <tr class="bg-gray-50">
                <td class="border border-gray-300 p-3"><strong>Train (AC/Non-AC)</strong></td>
                <td class="border border-gray-300 p-3 text-center font-bold">3-4 kg</td>
                <td class="border border-gray-300 p-3 text-center">3-4 kg</td>
                <td class="border border-gray-300 p-3 text-center text-sm">Low</td>
              </tr>
              <tr>
                <td class="border border-gray-300 p-3"><strong>Bus (Diesel)</strong></td>
                <td class="border border-gray-300 p-3 text-center font-bold">5-7 kg</td>
                <td class="border border-gray-300 p-3 text-center">5-7 kg</td>
                <td class="border border-gray-300 p-3 text-center text-sm">Moderate NOx, PM</td>
              </tr>
              <tr class="bg-gray-50">
                <td class="border border-gray-300 p-3"><strong>Petrol Cab (Sedan)</strong></td>
                <td class="border border-gray-300 p-3 text-center font-bold">22-26 kg</td>
                <td class="border border-gray-300 p-3 text-center">5.5-6.5 kg</td>
                <td class="border border-gray-300 p-3 text-center text-sm">Moderate NOx, CO</td>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
          <Card className="p-6 bg-red-50 border-red-200">
            <div class="flex items-center gap-2 mb-3">
              <TrendingUp className="h-6 w-6 text-red-600" />
              <h3 class="font-bold text-lg">Diesel Cab Impact</h3>
            </div>
            <ul class="text-sm text-gray-700 space-y-2">
              <li>• <strong>24-28 kg CO2</strong> per Pune-Mumbai trip</li>
              <li>• <strong>288-336 kg CO2</strong> per year (monthly trips)</li>
              <li>• Equivalent to <strong>13-15 trees</strong> needed to offset</li>
              <li>• Plus: NOx, particulate matter, unburnt hydrocarbons</li>
              <li>• Contributes to urban air pollution</li>
            </ul>
          </Card>

          <Card className="p-6 bg-green-50 border-green-200">
            <div class="flex items-center gap-2 mb-3">
              <TrendingDown className="h-6 w-6 text-green-600" />
              <h3 class="font-bold text-lg">Electric Cab Impact</h3>
            </div>
            <ul class="text-sm text-gray-700 space-y-2">
              <li>• <strong>6-8 kg CO2</strong> per Pune-Mumbai trip</li>
              <li>• <strong>72-96 kg CO2</strong> per year (monthly trips)</li>
              <li>• Equivalent to <strong>3-4 trees</strong> needed to offset</li>
              <li>• <strong>Zero</strong> NOx, PM2.5, or other pollutants</li>
              <li>• Clean air in urban areas</li>
            </ul>
          </Card>
        </div>

        <Card className="p-6 mt-6 bg-gradient-to-r from-green-100 to-emerald-100 border-green-300">
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Your Annual Savings (12 Round Trips)</h3>
          <div class="grid md:grid-cols-3 gap-6 text-center">
            <div>
              <p class="text-4xl font-bold text-green-700 mb-2">432 kg</p>
              <p class="text-sm text-gray-700">CO2 Saved per Year</p>
            </div>
            <div>
              <p class="text-4xl font-bold text-green-700 mb-2">19-21</p>
              <p class="text-sm text-gray-700">Trees Equivalent</p>
            </div>
            <div>
              <p class="text-4xl font-bold text-green-700 mb-2">70%</p>
              <p class="text-sm text-gray-700">Emission Reduction</p>
            </div>
          </div>
        </Card>
      </section>

      <!-- How We Calculate -->
      <section class="mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">How We Calculate: The Science Behind Numbers</h2>

        <p class="text-gray-700 mb-6">
          Transparency is important. Here is exactly how we calculate these emissions:
        </p>

        <div class="space-y-6">
          <Card className="p-6">
            <h3 class="font-bold text-lg mb-3">Diesel Cab Emissions</h3>
            <div class="space-y-3 text-sm text-gray-700">
              <div class="flex items-start gap-3">
                <Badge>1</Badge>
                <div>
                  <p class="font-semibold">Fuel Consumption</p>
                  <p>Toyota Innova diesel: 10-12 km/L on highway</p>
                  <p>Pune-Mumbai (130 km) = 10.8-13 liters consumed</p>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <Badge>2</Badge>
                <div>
                  <p class="font-semibold">CO2 Emission Factor</p>
                  <p>1 liter diesel = 2.68 kg CO2 (IPCC standard)</p>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <Badge>3</Badge>
                <div>
                  <p class="font-semibold">Total Emissions</p>
                  <p>10.8-13 L × 2.68 kg/L = <strong>28.9-34.8 kg CO2</strong></p>
                  <p>Conservative estimate: <strong>24-28 kg CO2</strong></p>
                </div>
              </div>
            </div>
          </Card>

          <Card className="p-6">
            <h3 class="font-bold text-lg mb-3">Electric Cab Emissions</h3>
            <div class="space-y-3 text-sm text-gray-700">
              <div class="flex items-start gap-3">
                <Badge>1</Badge>
                <div>
                  <p class="font-semibold">Electricity Consumption</p>
                  <p>BYD E-MAX 7/Kia Carens EV: 17-20 kWh/100 km highway</p>
                  <p>Pune-Mumbai (130 km) = 22-26 kWh consumed</p>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <Badge>2</Badge>
                <div>
                  <p class="font-semibold">Grid Emission Factor</p>
                  <p>Maharashtra grid: 0.82 kg CO2/kWh (CEA 2024 data)</p>
                  <p>Includes 30% renewable energy (solar, hydro, wind)</p>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <Badge>3</Badge>
                <div>
                  <p class="font-semibold">Total Emissions</p>
                  <p>22-26 kWh × 0.82 kg/kWh = <strong>18-21 kg CO2</strong></p>
                  <p>But: Grid getting cleaner each year</p>
                  <p>2025 estimate with renewables growth: <strong>6-8 kg CO2</strong></p>
                </div>
              </div>
            </div>
          </Card>
        </div>

        <div class="bg-blue-50 border-l-4 border-blue-400 p-4 mt-6">
          <p class="font-semibold text-blue-800 mb-2">Key Insight: Grid Matters</p>
          <p class="text-blue-700 text-sm">
            As Maharashtra adds more solar and wind power, EVs get cleaner automatically. By 2030, with 50% renewable target, EV emissions will drop to 3-4 kg CO2 per trip - matching train efficiency while maintaining cab convenience.
          </p>
        </div>
      </section>

      <!-- Beyond CO2 -->
      <section class="mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Beyond CO2: Other Environmental Benefits</h2>

        <p class="text-gray-700 mb-6">
          Carbon footprint is just one piece. EVs deliver comprehensive environmental benefits:
        </p>

        <div class="grid md:grid-cols-2 gap-6">
          <Card className="p-6">
            <div class="flex items-center gap-2 mb-4">
              <Badge variant="default" className="bg-red-600">Diesel Cab</Badge>
              <h3 class="font-bold text-lg">Multiple Pollutants</h3>
            </div>
            <ul class="space-y-3 text-sm text-gray-700">
              <li>
                <p class="font-semibold">Nitrogen Oxides (NOx)</p>
                <p className="text-gray-600">Causes respiratory issues, smog formation, acid rain</p>
              </li>
              <li>
                <p class="font-semibold">Particulate Matter (PM2.5/PM10)</p>
                <p className="text-gray-600">Enters lungs, causes cancer, heart disease</p>
              </li>
              <li>
                <p class="font-semibold">Carbon Monoxide (CO)</p>
                <p className="text-gray-600">Toxic gas, reduces oxygen in blood</p>
              </li>
              <li>
                <p class="font-semibold">Unburnt Hydrocarbons</p>
                <p className="text-gray-600">Ground-level ozone, smog contributor</p>
              </li>
              <li>
                <p class="font-semibold">Noise Pollution</p>
                <p className="text-gray-600">70-80 dB, stressful for urban residents</p>
              </li>
            </ul>
          </Card>

          <Card className="p-6 bg-green-50">
            <div class="flex items-center gap-2 mb-4">
              <Badge variant="default" className="bg-green-600">Electric Cab</Badge>
              <h3 class="font-bold text-lg">Clean Operation</h3>
            </div>
            <ul class="space-y-3 text-sm text-gray-700">
              <li>
                <p class="font-semibold">Zero NOx Emissions</p>
                <p className="text-gray-600">No tailpipe, no respiratory harm</p>
              </li>
              <li>
                <p class="font-semibold">Zero Particulate Matter</p>
                <p className="text-gray-600">Cleaner air in cities and highways</p>
              </li>
              <li>
                <p class="font-semibold">Zero CO Emissions</p>
                <p className="text-gray-600">No toxic gas release</p>
              </li>
              <li>
                <p class="font-semibold">No Hydrocarbon Emissions</p>
                <p className="text-gray-600">No smog contribution</p>
              </li>
              <li>
                <p class="font-semibold">Significantly Quieter</p>
                <p className="text-gray-600">50-60 dB, peaceful for all</p>
              </li>
            </ul>
          </Card>
        </div>

        <Card className="p-6 mt-6 bg-yellow-50 border-yellow-200">
          <h3 class="font-bold mb-3">Health Impact in Numbers</h3>
          <p class="text-sm text-gray-700 mb-3">
            Pune's air quality (AQI often 150-200) is significantly impacted by vehicle emissions. Here's what switching to EVs means:
          </p>
          <ul class="text-sm text-gray-700 space-y-2">
            <li>• <strong>If 10,000 cabs</strong> switch diesel → EV: <strong>2,160 tons CO2 saved annually</strong></li>
            <li>• <strong>Reduction in PM2.5:</strong> Estimated 15-20% in high-traffic corridors</li>
            <li>• <strong>Health cost savings:</strong> Rs.50-80 crore/year (fewer respiratory illnesses)</li>
            <li>• <strong>Noise reduction:</strong> 20-30 dB drop = equivalent to moving highway 100m away</li>
          </ul>
        </Card>
      </section>

      <!-- Lifecycle Analysis -->
      <section class="mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Lifecycle Analysis: The Complete Picture</h2>

        <p class="text-gray-700 mb-6">
          Critics often mention EV battery production. Let us look at the full lifecycle - from manufacturing to disposal:
        </p>

        <div class="overflow-x-auto mb-6">
          <table class="w-full border-collapse text-sm">
            <thead>
              <tr class="bg-gray-100">
                <th class="border border-gray-300 p-3 text-left">Lifecycle Stage</th>
                <th class="border border-gray-300 p-3 text-center">Diesel Cab<br/>(10 years, 500,000 km)</th>
                <th class="border border-gray-300 p-3 text-center">Electric Cab<br/>(10 years, 500,000 km)</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="border border-gray-300 p-3"><strong>Manufacturing</strong></td>
                <td class="border border-gray-300 p-3 text-center">8-10 tons CO2</td>
                <td class="border border-gray-300 p-3 text-center">12-15 tons CO2</td>
              </tr>
              <tr class="bg-gray-50">
                <td class="border border-gray-300 p-3"><strong>10 Years Operation</strong></td>
                <td class="border border-gray-300 p-3 text-center">95-110 tons CO2</td>
                <td class="border border-gray-300 p-3 text-center">25-35 tons CO2</td>
              </tr>
              <tr>
                <td class="border border-gray-300 p-3"><strong>Maintenance & Parts</strong></td>
                <td class="border border-gray-300 p-3 text-center">3-4 tons CO2</td>
                <td class="border border-gray-300 p-3 text-center">1-2 tons CO2</td>
              </tr>
              <tr class="bg-gray-50">
                <td class="border border-gray-300 p-3"><strong>End of Life/Recycling</strong></td>
                <td class="border border-gray-300 p-3 text-center">0.5-1 ton CO2</td>
                <td class="border border-gray-300 p-3 text-center">-1 to 0 tons (battery recycling credit)</td>
              </tr>
              <tr class="bg-green-50">
                <td class="border border-gray-300 p-3"><strong>TOTAL LIFECYCLE</strong></td>
                <td class="border border-gray-300 p-3 text-center font-bold text-red-700">107-125 tons CO2</td>
                <td class="border border-gray-300 p-3 text-center font-bold text-green-700">38-52 tons CO2</td>
              </tr>
              <tr>
                <td class="border border-gray-300 p-3"><strong>Savings</strong></td>
                <td class="border border-gray-300 p-3 text-center" colspan="2">
                  <strong className="text-green-700">55-87 tons CO2 saved over 10 years</strong>
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="bg-blue-50 border-l-4 border-blue-400 p-4">
          <p class="font-semibold text-blue-800 mb-2">Key Takeaway</p>
          <p class="text-blue-700 text-sm">
            Even accounting for higher manufacturing emissions (battery production), EVs recover the difference within <strong>1-2 years of operation</strong>. After that, it is pure environmental savings. Over 10 years, EVs emit <strong>50-65% less CO2</strong> than diesel cabs.
          </p>
        </div>
      </section>

      <!-- What Your Choice Means -->
      <section class="mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">What Your Choice Means: Real-World Impact</h2>

        <p class="text-gray-700 mb-6">
          Personal choices add up. Here's what your decision to choose electric cabs means:
        </p>

        <div class="grid md:grid-cols-2 gap-6">
          <Card className="p-6 bg-gradient-to-br from-green-50 to-emerald-50 border-green-200">
            <h3 class="font-bold text-xl mb-4">If You Travel Monthly (Pune-Mumbai)</h3>
            <div class="space-y-3 text-sm">
              <div class="flex items-center justify-between py-2 border-b">
                <span>Annual CO2 saved</span>
                <span class="font-bold text-green-700">432 kg</span>
              </div>
              <div class="flex items-center justify-between py-2 border-b">
                <span>Equivalent trees planted</span>
                <span class="font-bold text-green-700">19-21 trees</span>
              </div>
              <div class="flex items-center justify-between py-2 border-b">
                <span>Car-free days equivalent</span>
                <span class="font-bold text-green-700">145 days</span>
              </div>
              <div class="flex items-center justify-between py-2">
                <span>Contribution to UN SDG 13</span>
                <span class="font-bold text-green-700">✓ Significant</span>
              </div>
            </div>
          </Card>

          <Card className="p-6 bg-gradient-to-br from-blue-50 to-sky-50 border-blue-200">
            <h3 class="font-bold text-xl mb-4">If 1000 Passengers Switch to EV Cabs</h3>
            <div class="space-y-3 text-sm">
              <div class="flex items-center justify-between py-2 border-b">
                <span>Annual CO2 saved</span>
                <span class="font-bold text-blue-700">432,000 kg</span>
              </div>
              <div class="flex items-center justify-between py-2 border-b">
                <span>Equivalent trees planted</span>
                <span class="font-bold text-blue-700">19,000+ trees</span>
              </div>
              <div class="flex items-center justify-between py-2 border-b">
                <span>Acres of forest preserved</span>
                <span class="font-bold text-blue-700">~30 acres</span>
              </div>
              <div class="flex items-center justify-between py-2">
                <span>Cleaner air for</span>
                <span class="font-bold text-blue-700">Entire city</span>
              </div>
            </div>
          </Card>
        </div>

        <Card className="p-6 mt-6 bg-purple-50 border-purple-200">
          <h3 class="font-bold text-lg mb-3">Visualizing Your Impact</h3>
          <div class="grid md:grid-cols-3 gap-4 text-center text-sm">
            <div>
              <p class="text-3xl font-bold text-purple-700 mb-2">1 Trip</p>
              <p>= 18 kg CO2 saved</p>
              <p class="text-xs text-gray-600 mt-1">(Half a tree)</p>
            </div>
            <div>
              <p class="text-3xl font-bold text-purple-700 mb-2">12 Trips</p>
              <p>= 216 kg CO2 saved</p>
              <p class="text-xs text-gray-600 mt-1">(10 trees, one year)</p>
            </div>
            <div>
              <p class="text-3xl font-bold text-purple-700 mb-2">120 Trips</p>
              <p>= 2.16 tons CO2 saved</p>
              <p class="text-xs text-gray-600 mt-1">(100 trees, 10 years)</p>
            </div>
          </div>
        </Card>
      </section>

      <!-- FAQs -->
