const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": pageTitle,
  "description": pageDescription,
  "author": {
    "@type": "Organization",
    "name": "Shree Morya Cabs"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Shree Morya Cabs",
    "logo": {
      "@type": "ImageObject",
      "url": "https://shreemoryacabs.com/logo.png"
    }
  },
  "datePublished": "2025-01-15",
  "dateModified": "2025-01-15",
  "image": "https://shreemoryacabs.com/og-image.jpg",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://shreemoryacabs.com/blog/ev-range-explained-will-cab-make-it"
