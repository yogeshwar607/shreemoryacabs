---
import MainLayout from "@/layouts/MainLayout.astro";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Check, MapPin, Clock, IndianRupee } from "lucide-react";

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Electric Cab from Wakad to Mumbai Airport",
  "provider": {
    "@type": "LocalBusiness",
    "name": "GreenEVCabs"
  },
  "offers": {
    "@type": "Offer",
    "price": "3700",
    "priceCurrency": "INR"
  }
};
---

<MainLayout
  title="Electric Cab Wakad to Mumbai Airport ₹3,700 | 24/7 Service | GreenEVCabs"
  description="Book electric cab from Wakad to Mumbai Airport at ₹3,700. Professional drivers, luxury 7-seater SUVs, zero surge pricing. Early morning pickups available. Book 24/7."
  keywords={[
    "wakad to mumbai airport cab",
    "electric cab wakad",
    "wakad mumbai airport taxi",
    "ev cab wakad",
    "wakad airport transfer"
  ]}
>
  <section class="w-full py-12 md:py-24 bg-gradient-to-b from-primary/10 to-background">
    <div class="container px-4 md:px-6">
      <div class="max-w-4xl mx-auto">
        <Badge variant="secondary" className="mb-4">
          Wakad Specialist • Zero Surge Pricing
        </Badge>
        <h1 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl mb-4">
          Electric Cab Wakad to Mumbai Airport ₹3,700
        </h1>
        <p class="text-xl text-muted-foreground mb-6">
          Premium electric cab service from Wakad to Mumbai Airport. Professional drivers, luxury 7-seater electric SUVs, all tolls included. Book 24/7.
        </p>

        <div class="grid md:grid-cols-3 gap-4 mb-8">
          <div class="flex items-center gap-2">
            <IndianRupee class="w-5 h-5 text-primary" />
            <span class="font-semibold">₹3,700 Fixed</span>
          </div>
          <div class="flex items-center gap-2">
            <MapPin class="w-5 h-5 text-primary" />
            <span class="font-semibold">150 km</span>
          </div>
          <div class="flex items-center gap-2">
            <Clock class="w-5 h-5 text-primary" />
            <span class="font-semibold">3 hours</span>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-4">
          <a href="https://wa.me/917498264215?text=Book%20Wakad%20to%20Mumbai%20Airport" target="_blank">
            <Button size="lg" className="bg-green-600 hover:bg-green-700">Book on WhatsApp</Button>
          </a>
          <a href="tel:+917498264215">
            <Button size="lg" variant="outline">Call +91 74982 64215</Button>
          </a>
        </div>
      </div>
    </div>
  </section>

  <section class="w-full py-12 md:py-16">
    <div class="container px-4 md:px-6">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-8">Pickup Locations in Wakad</h2>
        <div class="grid md:grid-cols-2 gap-6">
          <Card>
            <CardHeader><CardTitle>Residential Areas</CardTitle></CardHeader>
            <CardContent>
              <ul class="space-y-2 text-sm">
                <li class="flex gap-2"><Check class="w-4 h-4 text-green-600 mt-0.5" /><span>Kumar Picasso</span></li>
                <li class="flex gap-2"><Check class="w-4 h-4 text-green-600 mt-0.5" /><span>Kolte Patil Life Republic</span></li>
                <li class="flex gap-2"><Check class="w-4 h-4 text-green-600 mt-0.5" /><span>Megapolis</span></li>
                <li class="flex gap-2"><Check class="w-4 h-4 text-green-600 mt-0.5" /><span>All Wakad societies</span></li>
              </ul>
            </CardContent>
          </Card>
          <Card>
            <CardHeader><CardTitle>Commercial Areas</CardTitle></CardHeader>
            <CardContent>
              <ul class="space-y-2 text-sm">
                <li class="flex gap-2"><Check class="w-4 h-4 text-green-600 mt-0.5" /><span>Wakad IT Parks</span></li>
                <li class="flex gap-2"><Check class="w-4 h-4 text-green-600 mt-0.5" /><span>Datta Mandir Road</span></li>
                <li class="flex gap-2"><Check class="w-4 h-4 text-green-600 mt-0.5" /><span>Hinjewadi Road</span></li>
                <li class="flex gap-2"><Check class="w-4 h-4 text-green-600 mt-0.5" /><span>Wakad Bridge area</span></li>
              </ul>
            </CardContent>
          </Card>
        </div>
      </div>
    </div>
  </section>

  <section class="w-full py-12 bg-muted/30">
    <div class="container px-4 md:px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-4">Why Choose GreenEVCabs from Wakad?</h2>
        <div class="grid md:grid-cols-2 gap-6 mt-8">
          <Card><CardContent className="pt-6">
            <h3 class="font-semibold mb-2">₹500 Cheaper Than Competitors</h3>
            <p class="text-sm text-muted-foreground">Save money with transparent pricing. ₹3,700 vs ₹4,200 charged by others.</p>
          </CardContent></Card>
          <Card><CardContent className="pt-6">
            <h3 class="font-semibold mb-2">Early Morning Pickups</h3>
            <p class="text-sm text-muted-foreground">3 AM, 4 AM pickups available for early flights. Reliable and on-time service.</p>
          </CardContent></Card>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
