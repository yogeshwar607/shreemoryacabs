---
import MainLayout from "@/layouts/MainLayout.astro";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Check, MapPin, Zap, Shield, Clock } from "lucide-react";
import StructuredData from "@/components/seo/StructuredData.astro";

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Electric Cab Service in Pune",
  "provider": {
    "@type": "LocalBusiness",
    "name": "Shree Morya Cabs",
    "description": "Premium electric cab service in Pune with professional drivers and luxury 7-seater SUVs"
  },
  "areaServed": {
    "@type": "City",
    "name": "Pune, Maharashtra, India"
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "What is the best electric cab service in Pune?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Shree Morya Cabs offers the best electric cab service in Pune with ₹2,700 rates for Pune-Mumbai (cheaper than competitors by ₹500), professional drivers, luxury 7-seater SUVs, and zero surge pricing."
      }
    },
    {
      "@type": "Question",
      "name": "How much does an electric cab cost in Pune?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Electric cab rates in Pune start from ₹2,700 for Pune-Mumbai airport transfers with Shree Morya Cabs. All tolls, parking, and driver charges are included with no hidden fees."
      }
    }
  ]
};
---

<MainLayout
  title="Electric Cab Pune | Best EV Taxi Service ₹2,700 | Professional Drivers - Shree Morya Cabs"
  description="Best electric cab service in Pune. Premium 7-seater SUVs from ₹2,700. Professional drivers, zero surge pricing. Serving Hinjewadi, Wakad, Baner, Kothrud, all Pune areas. Book 24/7."
  keywords={[
    "electric cab pune",
    "ev taxi pune",
    "electric taxi service pune",
    "best electric cab pune",
    "ev cab service pune",
    "green cab pune",
    "electric vehicle taxi pune"
  ]}
>
  <StructuredData data={[serviceSchema, faqSchema]} />

  <!-- Hero Section -->
  <section class="w-full py-12 md:py-24 lg:py-32 bg-gradient-to-b from-primary/10 to-background">
    <div class="container px-4 md:px-6">
      <div class="max-w-5xl mx-auto text-center">
        <Badge variant="secondary" className="mb-4">
          Pune's Leading Electric Cab Service
        </Badge>
        <h1 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl mb-4">
          Electric Cab Service in Pune
        </h1>
        <p class="text-xl text-muted-foreground mb-8 max-w-3xl mx-auto">
          Premium electric cab service with professional drivers and luxury 7-seater SUVs. | Best rates from ₹2,300 for Pune-Navi Mumbai Airport NMIA. | Best rates from ₹2,700 for Pune-Mumbai Airport CSIA. Zero surge pricing, available 24/7 across all Pune areas.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="https://wa.me/917498264215?text=I%20want%20to%20book%20an%20electric%20cab%20in%20Pune" target="_blank">
            <Button size="lg" className="bg-green-600 hover:bg-green-700">
              Book on WhatsApp
            </Button>
          </a>
          <a href="/routes">
            <Button size="lg" variant="outline">
              View Routes & Pricing
            </Button>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Electric Cabs -->
  <section class="w-full py-12 md:py-16">
    <div class="container px-4 md:px-6">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12">Why Choose Electric Cabs in Pune?</h2>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          <Card>
            <CardHeader>
              <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center mb-4">
                <Zap class="w-6 h-6 text-primary" />
              </div>
              <CardTitle>Zero Emissions</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-sm text-muted-foreground">
                100% electric vehicles for cleaner air and sustainable travel. No pollution, no noise.
              </p>
            </CardContent>
          </Card>

          <Card>
            <CardHeader>
              <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center mb-4">
                <Shield class="w-6 h-6 text-primary" />
              </div>
              <CardTitle>Best Pricing</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-sm text-muted-foreground">
                ₹2,700 for Pune-Mumbai. Save ₹500-1,300 vs competitors. No surge pricing ever.
              </p>
            </CardContent>
          </Card>

          <Card>
            <CardHeader>
              <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center mb-4">
                <MapPin class="w-6 h-6 text-primary" />
              </div>
              <CardTitle>All Pune Areas</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-sm text-muted-foreground">
                Hinjewadi, Wakad, Baner, Kothrud, Viman Nagar, Hadapsar - we cover all Pune.
