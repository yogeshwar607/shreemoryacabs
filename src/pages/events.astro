  <!-- CTA Section -->
  <section class="w-full py-12 md:py-16 bg-primary/10">
    <div class="container px-4 md:px-6">
      <div class="text-center max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold mb-4">Plan Your Event Transportation</h2>
