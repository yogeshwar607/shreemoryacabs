---
import MainLayout from "@/layouts/MainLayout.astro";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Check, MapPin, Clock, IndianRupee } from "lucide-react";
---

<MainLayout
  title="Electric Cab Kothrud to Mumbai Airport ₹2,700 | Best Price | Shree Morya Cabs"
  description="Book electric cab from Kothrud to Mumbai Airport at ₹2,700. Premium 7-seater SUVs, professional drivers, zero surge. Pickup from all Kothrud areas. 24/7 service."
  keywords={[
    "kothrud to mumbai airport cab",
    "electric cab kothrud",
    "kothrud airport taxi",
    "ev cab kothrud",
    "karve nagar mumbai airport"
  ]}
>
  <section class="w-full py-12 md:py-24 bg-gradient-to-b from-orange-50 dark:from-orange-950/20 to-background">
    <div class="container px-4 md:px-6">
      <div class="max-w-4xl mx-auto">
        <Badge variant="secondary" className="mb-4">Kothrud • Karve Nagar • Paud Road</Badge>
        <h1 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl mb-4">
          Electric Cab Kothrud to Mumbai Airport
        </h1>
        <p class="text-xl text-muted-foreground mb-6">
          Reliable electric cab service from Kothrud to Mumbai Airport. Fixed rate ₹2,700, no surge pricing, professional drivers. Available 24/7.
        </p>
        <div class="grid md:grid-cols-3 gap-4 mb-8">
          <div class="flex items-center gap-2"><IndianRupee class="w-5 h-5 text-orange-600 dark:text-orange-400" /><span class="font-semibold">₹2,700 Fixed</span></div>
          <div class="flex items-center gap-2"><MapPin class="w-5 h-5 text-orange-600 dark:text-orange-400" /><span class="font-semibold">152 km</span></div>
          <div class="flex items-center gap-2"><Clock class="w-5 h-5 text-orange-600 dark:text-orange-400" /><span class="font-semibold">3 hours</span></div>
        </div>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="https://wa.me/917498264215?text=Book%20Kothrud%20to%20Mumbai%20Airport" target="_blank">
            <Button size="lg" className="bg-orange-600 hover:bg-orange-700">Book on WhatsApp</Button>
          </a>
          <a href="tel:+917498264215"><Button size="lg" variant="outline">Call +91 74982 64215</Button></a>
        </div>
      </div>
    </div>
  </section>

  <section class="w-full py-12">
    <div class="container px-4 md:px-6">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-8">Coverage in Kothrud Area</h2>
        <div class="grid md:grid-cols-2 gap-6">
          <Card><CardHeader><CardTitle>Main Kothrud</CardTitle></CardHeader>
            <CardContent><ul class="space-y-2 text-sm">
              <li class="flex gap-2"><Check class="w-4 h-4 text-green-600 mt-0.5" /><span>Kothrud Depot</span></li>
              <li class="flex gap-2"><Check class="w-4 h-4 text-green-600 mt-0.5" /><span>Karve Road</span></li>
              <li class="flex gap-2"><Check class="w-4 h-4 text-green-600 mt-0.5" /><span>Paud Road</span></li>
              <li class="flex gap-2"><Check class="w-4 h-4 text-green-600 mt-0.5" /><span>Kothrud Gaothan</span></li>
              <li class="flex gap-2"><Check class="w-4 h-4 text-green-600 mt-0.5" /><span>All Kothrud societies</span></li>
            </ul></CardContent>
          </Card>
          <Card><CardHeader><CardTitle>Nearby Areas</CardTitle></CardHeader>
            <CardContent><ul class="space-y-2 text-sm">
              <li class="flex gap-2"><Check class="w-4 h-4 text-green-600 mt-0.5" /><span>Karve Nagar</span></li>
              <li class="flex gap-2"><Check class="w-4 h-4 text-green-600 mt-0.5" /><span>Warje</span></li>
              <li class="flex gap-2"><Check class="w-4 h-4 text-green-600 mt-0.5" /><span>Mayur Colony</span></li>
              <li class="flex gap-2"><Check class="w-4 h-4 text-green-600 mt-0.5" /><span>Dahanukar Colony</span></li>
              <li class="flex gap-2"><Check class="w-4 h-4 text-green-600 mt-0.5" /><span>Ideal Colony</span></li>
            </ul></CardContent>
          </Card>
        </div>
        <div class="mt-8 text-center bg-muted/30 rounded-lg p-6">
          <h3 class="font-semibold text-lg mb-2">Serving Kothrud for 10+ Years</h3>
          <p class="text-muted-foreground">Trusted by hundreds of Kothrud residents for Mumbai Airport transfers. ₹2,700 all-inclusive, zero hidden charges.</p>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
