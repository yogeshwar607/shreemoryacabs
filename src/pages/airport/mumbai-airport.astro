---
import MainLayout from "@/layouts/MainLayout.astro";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import Breadcrumbs from "@/components/seo/Breadcrumbs.astro";
import StructuredData from "@/components/seo/StructuredData.astro";
import { generateBreadcrumbSchema } from "@/lib/seo";
import { Plane, MapPin, Clock, Check, Zap } from "lucide-react";

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: "Home", url: "/" },
  { name: "Airport Transfers", url: "/airport" },
  { name: "Mumbai Airport", url: "/airport/mumbai-airport" }
]);
---

<MainLayout
  title="Electric Cab to Mumbai Airport (BOM) | CSMIA Transfer 24/7 | Zero Emission Taxi"
  description="Book premium electric cab to/from Mumbai Airport (Chhatrapati Shivaji Maharaj International Airport). Terminal 1 & 2 service, flight tracking, 24/7 availability. Pune-Mumbai Airport ₹2,700. Eco-friendly EV taxi BOM."
  keywords={[
    "electric cab Mumbai airport",
    "Mumbai airport electric taxi",
    "BOM electric cab",
    "CSMIA electric vehicle",
    "Pune to Mumbai airport electric cab",
    "Mumbai airport EV transfer",
    "Terminal 1 electric cab",
    "Terminal 2 electric taxi",
    "eco-friendly Mumbai airport cab",
    "zero emission Mumbai airport"
  ]}
>
  <Breadcrumbs items={[
    { name: "Home", href: "/" },
    { name: "Airport Transfers", href: "/airport" },
    { name: "Mumbai Airport", href: "/airport/mumbai-airport" }
  ]} />

  <StructuredData data={[breadcrumbSchema]} />

  <div class="container px-4 py-12 md:py-16">
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">
        Electric Cab to Mumbai Airport
      </h1>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
        Premium electric vehicle transfer service for Chhatrapati Shivaji Maharaj International Airport (BOM).
        24/7 service, flight tracking, Terminal 1 & Terminal 2 coverage.
      </p>
    </div>

    <!-- Quick Booking -->
    <div class="mb-12 bg-primary/5 rounded-lg p-6 max-w-3xl mx-auto">
      <h3 class="text-xl font-semibold mb-4 text-center">Book Electric Cab Now</h3>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="https://wa.me/917498264215?text=Hi%2C%20I%20need%20electric%20cab%20to%2Ffrom%20Mumbai%20Airport" target="_blank">
          <Button size="lg" className="bg-green-500 hover:bg-green-600 text-white w-full sm:w-auto">
            WhatsApp Booking
          </Button>
        </a>
        <a href="tel:+917498264215">
          <Button size="lg" variant="outline" className="w-full sm:w-auto">
            Call +91 74982 64215
          </Button>
        </a>
      </div>
    </div>

    <!-- Routes & Pricing -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Popular Routes to Mumbai Airport</h2>
      <div class="grid md:grid-cols-2 gap-6 max-w-5xl mx-auto">
        {[
          { from: "Pune", distance: "148 km", time: "3-3.5 hours", kia: 4500, byd: 5200 },
          { from: "Thane", distance: "35 km", time: "1-1.5 hours", kia: 1800, byd: 2100 },
          { from: "Andheri", distance: "8 km", time: "20-30 mins", kia: 800, byd: 1000 },
          { from: "Bandra", distance: "10 km", time: "25-35 mins", kia: 900, byd: 1100 },
          { from: "Powai", distance: "12 km", time: "30-40 mins", kia: 1000, byd: 1200 },
          { from: "Navi Mumbai", distance: "25 km", time: "45-60 mins", kia: 1500, byd: 1800 }
        ].map((route) => (
          <Card>
            <CardContent className="pt-6">
              <div class="flex justify-between items-start mb-3">
                <div>
                  <h3 class="font-semibold text-lg">{route.from} ↔ Mumbai Airport</h3>
                  <p class="text-sm text-muted-foreground">{route.distance} • {route.time}</p>
                </div>
                <div class="text-right">
                  <p class="font-semibold text-primary">₹{route.kia}</p>
                  <p class="text-xs text-muted-foreground">Kia Carens EV</p>
                </div>
              </div>
              <Button variant="outline" size="sm" className="w-full">Book This Route →</Button>
            </CardContent>
          </Card>
        ))}
      </div>
    </div>

    <!-- Services -->
    <div class="mb-16 bg-muted/50 rounded-lg p-8">
      <h2 class="text-3xl font-bold mb-8 text-center">Mumbai Airport Electric Cab Features</h2>
      <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        <div class="flex gap-4">
          <Plane className="h-8 w-8 text-primary flex-shrink-0" />
          <div>
            <h3 class="font-semibold mb-2">Both Terminals Covered</h3>
            <p class="text-sm text-muted-foreground">
              Service to Terminal 1 (Domestic) and Terminal 2 (International & Domestic). Know pickup points for easy identification.
            </p>
          </div>
        </div>
        <div class="flex gap-4">
          <Clock className="h-8 w-8 text-primary flex-shrink-0" />
          <div>
            <h3 class="font-semibold mb-2">Flight Tracking</h3>
            <p class="text-sm text-muted-foreground">
              Real-time flight monitoring. Driver adjusts for delays automatically. No extra waiting charges for flight delays.
            </p>
          </div>
        </div>
        <div class="flex gap-4">
          <Zap className="h-8 w-8 text-primary flex-shrink-0" />
          <div>
            <h3 class="font-semibold mb-2">Zero Emissions</h3>
            <p class="text-sm text-muted-foreground">
              100% electric vehicles. Comfortable, quiet, eco-friendly travel to/from Mumbai Airport with premium Kia & BYD EVs.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center max-w-3xl mx-auto">
      <h3 class="text-2xl font-bold mb-4">Book Your Mumbai Airport Transfer Now</h3>
      <p class="text-muted-foreground mb-6">
        Available 24/7 for Terminal 1 & Terminal 2. Instant confirmation, transparent pricing, zero emissions.
      </p>
      <a href="https://wa.me/917498264215?text=Mumbai%20Airport%20Transfer%20Booking" target="_blank">
        <Button size="lg" className="bg-green-500 hover:bg-green-600 text-white">
          Book on WhatsApp
        </Button>
      </a>
    </div>
  </div>
</MainLayout>
