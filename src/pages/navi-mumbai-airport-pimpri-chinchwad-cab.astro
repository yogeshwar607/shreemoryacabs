---
import MainLayout from "@/layouts/MainLayout.astro";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import StructuredData from "@/components/seo/StructuredData.astro";
import { generateBreadcrumbSchema } from "@/lib/seo";

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "provider": { "@type": "LocalBusiness", "name": "Shree Morya Cabs", "telephone": "+917498264215" },
  "offers": { "@type": "Offer", "price": "2300", "priceCurrency": "INR" }
};

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: "Home", url: "/" },
  { name: "NMIA", url: "/navi-mumbai-airport-to-pune-cab" },
  { name: "PCMC", url: "/navi-mumbai-airport-pimpri-chinchwad-cab" }
]);
---

<MainLayout title="NMIA to Pimpri Chinchwad Cab Starting ₹2,300 | PCMC Electric Taxi" description="Navi Mumbai Airport to PCMC electric cab Starting ₹2,300. Covers Nigdi, Chinchwad, Pimpri. 105 km. Book now!" keywords={["nmia pcmc", "navi mumbai airport pimpri chinchwad"]}>
  <StructuredData data={[serviceSchema, breadcrumbSchema]} />
  <section class="py-20 bg-gradient-to-br from-green-50 to-white">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-5xl font-bold mb-6">NMIA to Pimpri Chinchwad<br/>₹2,300</h1>
      <p class="text-xl mb-8">105 km | 2.5 Hours | PCMC Coverage</p>
      <Button size="lg" className="bg-green-600" asChild><a href="tel:+917498264215">Book Cab</a></Button>
    </div>
  </section>
  <section class="py-16">
    <div class="container max-w-4xl mx-auto px-4">
      <div class="grid md:grid-cols-3 gap-6">
        <Card><CardHeader><CardTitle>Nigdi Area</CardTitle></CardHeader><CardContent><p>Nigdi Station</p><p>Auto Cluster Road</p></CardContent></Card>
        <Card><CardHeader><CardTitle>Chinchwad</CardTitle></CardHeader><CardContent><p>Chinchwad Station</p><p>Industrial Area</p></CardContent></Card>
        <Card><CardHeader><CardTitle>Pimpri</CardTitle></CardHeader><CardContent><p>Pimpri Station</p><p>MIDC Area</p></CardContent></Card>
      </div>
    </div>
  </section>
</MainLayout>
