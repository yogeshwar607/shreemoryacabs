import { Check, MessageSquare, Phone, Calendar, MapPin, Clock, Shield, CreditCard } from "lucide-react";
import StructuredData from "@/components/seo/StructuredData.astro";
import { generateBreadcrumbSchema } from "@/lib/seo";

const howToSchema = {
  "@context": "https://schema.org",
  "@type": "HowTo",
  "name": "How to Book Electric Cab in Pune",
  "description": "Simple 4-step process to book electric cab from Pune to Mumbai at ₹2,700",
  "step": [
    {
      "@type": "HowToStep",
      "name": "Choose Booking Method",
      "text": "Click WhatsApp button or call +91 74982 64215"
    },
    {
      "@type": "HowToStep",
      "name": "Share Trip Details",
      "text": "Provide pickup location, date, time, and destination"
    },
    {
      "@type": "HowToStep",
      "name": "Get Confirmation",
      "text": "Receive instant confirmation with driver details and vehicle number"
    },
    {
      "@type": "HowToStep",
      "name": "Enjoy Your Ride",
      "text": "Driver arrives on time, comfortable journey, pay after trip"
    }
  ]
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How do I book electric cab in Pune?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Book electric cab in Pune by messaging us on WhatsApp at +91 74982 64215 or calling directly. Share your pickup location, date, time, and destination. Get instant confirmation with driver details. No advance payment required."
      }
    },
    {
      "@type": "Question",
      "name": "What details do I need to provide for booking?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "You need to provide: (1) Pickup location in Pune, (2) Drop location (Mumbai/Mumbai Airport/Navi Mumbai Airport), (3) Date and time of travel, (4) Number of passengers. That's it! We'll handle everything else."
      }
    },
    {
      "@type": "Question",
      "name": "Do I need to pay advance for booking?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "No advance payment required. Pay after your comfortable ride. We accept UPI, cash, and card payments. GST invoice provided on request."
      }
    }
  ]
};

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: "Home", url: "/" },
  { name: "Book Electric Cab Pune", url: "/electric-cab-booking-pune" }
]);
