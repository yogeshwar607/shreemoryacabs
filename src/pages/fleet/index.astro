---
import MainLayout from "@/layouts/MainLayout.astro";
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import Breadcrumbs from "@/components/seo/Breadcrumbs.astro";
import StructuredData from "@/components/seo/StructuredData.astro";
import { vehicles } from "@/data/vehicles";
import { generateVehicleSchema } from "@/lib/seo";
import { Zap, Users, Battery } from "lucide-react";

// Generate structured data for all vehicles
const vehicleSchemas = vehicles.map((vehicle) => generateVehicleSchema(vehicle));
---

<MainLayout
  title="Electric Fleet - Comfortable EV Cabs in Maharashtra | Shree Morya Cabs"
  description="Explore our premium electric vehicle fleet. Book Kia Carens EV (7-seater) or BYD E-MAX 7 for comfortable, eco-friendly travel. Clean electric rides, spacious interiors, advanced safety features."
  keywords={[
    "electric cab fleet",
    "EV cab booking",
    "Kia Carens EV",
    "BYD E-MAX 7",
    "7 seater electric cab",
    "premium EV taxi",
  ]}
>
  <StructuredData data={vehicleSchemas} />
  <!-- Hero Section -->
  <section class="w-full py-12 md:py-24 bg-gradient-to-b from-orange-50 dark:from-orange-950/20 to-background">
    <div class="container px-4 md:px-6">
      <div class="max-w-3xl">
        <Breadcrumbs items={[{ name: "Fleet", url: "/fleet" }]} />
        <Badge variant="secondary" className="mb-4">
          Our Fleet
        </Badge>
        <h1 class="text-4xl font-bold tracking-tighter sm:text-5xl md:text-6xl mb-4">
          Comfortable Electric Vehicles
        </h1>
        <p class="text-lg text-muted-foreground">
          Choose from our carefully selected fleet of electric vehicles. Each car offers zero emissions,
          comfortable journey, and the latest safety features for your journey.
        </p>
      </div>
    </div>
  </section>

  <!-- Fleet Listing -->
  <section class="w-full py-12 md:py-24">
    <div class="container px-4 md:px-6">
      <div class="grid grid-cols-1 gap-12">
        {vehicles.map((vehicle) => (
          <Card className="overflow-hidden">
            <div class="grid md:grid-cols-2 gap-6">
              <!-- Image -->
              <div class="aspect-video md:aspect-auto bg-muted overflow-hidden">
                <img
                  src={vehicle.image}
                  alt={`${vehicle.name} - ${vehicle.tagline}`}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>

              <!-- Content -->
              <div class="p-6 flex flex-col">
                <div class="flex-1 space-y-4">
                  <div class="flex items-start justify-between">
                    <div>
                      <h2 class="text-3xl font-bold">{vehicle.name}</h2>
                      <p class="text-lg text-muted-foreground mt-2">{vehicle.tagline}</p>
                    </div>
                    <Badge variant="secondary" className="text-base">
                      {vehicle.seating} Seater
                    </Badge>
                  </div>

                  <p class="text-muted-foreground">{vehicle.description}</p>

                  <!-- Quick Stats -->
                  <div class="flex flex-wrap gap-4">
                    <div class="flex items-center gap-2">
                      <Battery class="w-5 h-5 text-orange-600 dark:text-orange-400" />
                      <span class="text-sm font-medium">{vehicle.range}</span>
                    </div>
                    <div class="flex items-center gap-2">
                      <Users class="w-5 h-5 text-orange-600 dark:text-orange-400" />
                      <span class="text-sm font-medium">{vehicle.seating} Passengers</span>
                    </div>
                    <div class="flex items-center gap-2">
                      <Zap class="w-5 h-5 text-orange-600 dark:text-orange-400" />
                      <span class="text-sm font-medium">{vehicle.specifications.battery}</span>
                    </div>
                  </div>

                  <!-- Pricing -->
                  <div class="pt-4 border-t">
                    <div class="grid grid-cols-3 gap-4 text-center">
                      <div>
                        <p class="text-sm text-muted-foreground">Per KM</p>
                        <p class="text-xl font-bold">₹{vehicle.pricing.perKm}</p>
                      </div>
                      <div>
                        <p class="text-sm text-muted-foreground">Min. KM</p>
                        <p class="text-xl font-bold">{vehicle.pricing.minimumKm}</p>
                      </div>
                      <div>
                        <p class="text-sm text-muted-foreground">Full Day</p>
                        <p class="text-xl font-bold">₹{vehicle.pricing.fullDay}</p>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Actions -->
                <div class="flex gap-4 mt-6">
                  <a href={`/fleet/${vehicle.slug}`} class="flex-1">
                    <Button className="w-full">View Full Details</Button>
                  </a>
                  <Button variant="outline" className="flex-1">
                    Book Now
                  </Button>
                </div>
              </div>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="w-full py-12 md:py-24 bg-muted/50">
    <div class="container px-4 md:px-6">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl mb-4">
          All Vehicles Include
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mt-8">
          {[
            "Professional Drivers",
            "Clean & Sanitized",
            "Climate Control",
            "USB Charging",
            "Spacious Luggage",
            "Safety Features",
          ].map((feature) => (
            <div class="p-4 bg-background rounded-lg border">
              <p class="font-medium text-sm">{feature}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
</MainLayout>
